<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "aGestiona2 | ag2Portal" %></title>
    <meta name="description" content="aGestiona2 ag2Portal">
    <meta name="author" content="Nestor Rodriguez (SPSI) para AYG">
    <%= favicon_link_tag "/favicon.ico?1" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <script type="text/javascript">
            window.I18n = <%= current_translations.to_json.html_safe %></script>
    <!-- Header NavBar -->
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render '/layouts/navigation' %>
        </div>
      </nav>
    </header>
    <!-- Main container -->
    <div id="main" role="main">
      <div class="container">
        <div class="row">
          <div class="span12">
            <%= render '/layouts/messages' %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div><!-- /#main -->
    <!-- Footer NavBar -->
    <footer class="navbar navbar-fixed-bottom">
      <div class="navbar-inner">
        <div class="container">
          <%= render '/layouts/footernav' %>
        </div>
      </div>
    </footer>
    <!-- Modals -->
    <%= render '/layouts/notfound' %>
    <% if user_signed_in? && session[:exclusive_office] != true %>
    <%= render '/layouts/oco' %>
    <% end %>
    <%= render '/layouts/about' %>
    <%= render '/ag2_help_desk/tickets/new_ticket' %>
  </body>
</html>
