<%=t '.number' %><%= @ticket.id.to_s.rjust(6, '0') %>
<%=t '.created_at' %><%= @ticket.created_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %>
<%=t '.created_by' %><%= User.find(@ticket.created_by).email unless @ticket.created_by.blank? %>
<%=t '.office' %><%= @ticket.office.name unless @ticket.office.blank? %>
<%=t '.source_ip' %><%= @ticket.source_ip %>
<%=t '.category' %><%= @ticket.ticket_category.name %>
<%=t '.priority' %><%= @ticket.ticket_priority.name %>

<%=t '.title' %><%= @ticket.ticket_subject %>
-------
<%= @ticket.ticket_message %>

<%=t 'notifier.do_not_reply' %>
