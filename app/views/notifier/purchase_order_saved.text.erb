<%=t '.number' %><%= @purchase_order.id.to_s.rjust(7, '0') %>
<%=t '.created_at' %><%= @purchase_order.created_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %>
<%=t '.created_by' %><%= User.find(@purchase_order.created_by).email unless @purchase_order.created_by.blank? %>
<%=t '.office' %><%= @purchase_order.office.name unless @purchase_order.office.blank? %>
<%=t '.category' %><%= @purchase_order.ticket_category.name %>
<%=t '.priority' %><%= @purchase_order.ticket_priority.name %>

<%=t '.title' %><%= @purchase_order.ticket_subject %>
-------
<%=t '.assign_at' %><%= @purchase_order.assign_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") unless @purchase_order.assign_at.blank? %>
<%=t '.technician' %><%= @purchase_order.technician.name.titleize unless @purchase_order.technician.blank? %> (<%= @purchase_order.technician.user.email unless @purchase_order.technician.blank? %>)
<%=t '.status' %>*<%= @purchase_order.ticket_status.name.titleize unless @purchase_order.ticket_status.blank? %>*
<%=t '.status_changed_at' %><%= @purchase_order.status_changed_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") unless @purchase_order.status_changed_at.blank? %>
-------
<%=t '.status_changed_message' %>
<%= @purchase_order.status_changed_message unless @purchase_order.status_changed_message.blank? %>

<%=t 'notifier.do_not_reply' %>

# Target URL
<%= ag2_purchase.purchase_order_url(@purchase_order, :host => "agestiona2.aguaygestion.com") %>