<%= render '/layouts/ag2_directory/sharedcontacttypesbreadcrumb' %>

<h3>Shared contact Types</h3>
<div class="span6">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shared_contact_types.each do |t| %>
      <tr>
        <td><%= link_to t.name.titleize, t %></td>
        <td><%= link_to edit_shared_contact_type_path(t), :class => 'btn btn-mini'  do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(t, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Shared contact Type', new_shared_contact_type_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Back to Shared Contacts', shared_contacts_path %> |
  <%= link_to 'Back to ag2Admin', ag2_admin.root_path %>
</div>
