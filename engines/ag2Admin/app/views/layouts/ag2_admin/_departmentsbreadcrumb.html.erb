<% content_for :title, "aGestiona2 | ag2Departments" %>
<% content_for :icon, "/assets/icon/ag2Departments.png" %>
<% content_for :alt, "ag2Departments" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.root_path %>">ag2Admin</a><span class="divider">></span>
  </li>
  <% if @departments %>
  <li>
    <%=t "ag2_admin.breadcrumb.departments.items" %>
  </li>
  <% end %>
  <% if @department %>
  <li>
    <a href="<%= departments_path %>"><%=t "ag2_admin.breadcrumb.departments.items" %></a><span class="divider">></span>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%=t "ag2_admin.breadcrumb.departments.item"%>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%=t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <a class="close" href="<%= ag2_admin.root_path %>">&#215;</a>
</ul>
