<% content_for :icon, "/assets/icon/ag2Org.png" %>
<% content_for :alt, "ag2Org" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.root_path %>">ag2Admin</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.config_path %>">ag2Config</a><span class="divider">></span>
  </li>
  <% if @organizations %>
  <li>
    <%=t "ag2_admin.breadcrumb.organizations.items" %>
  </li>
  <% end %>
  <% if @organization %>
  <li>
    <a href="<%= organizations_path %>"><%=t "ag2_admin.breadcrumb.organizations.items" %></a><span class="divider">></span>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%=t "ag2_admin.breadcrumb.organizations.item"%>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%=t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <a class="close" href="<%= ag2_admin.config_path %>">&#215;</a>
</ul>
