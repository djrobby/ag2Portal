<% content_for :title, "aGestiona2 | ag2Apps" %>
<% content_for :icon, "/assets/icon/ag2Apps.png" %>
<% content_for :alt, "ag2Apps" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.root_path %>">ag2Admin</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.config_path %>">ag2Config</a><span class="divider">></span>
  </li>
  <% if @apps %>
  <li>
    ag2Apps
  </li>
  <% end %>
  <% if @app %>
  <li>
    <a href="<%= apps_path %>">ag2Apps</a><span class="divider">></span>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%= @app.name %>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%=t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <a class="close" href="<%= ag2_admin.root_path %>">&#215;</a>
</ul>
