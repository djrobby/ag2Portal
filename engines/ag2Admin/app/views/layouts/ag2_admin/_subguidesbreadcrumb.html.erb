<% content_for :title, "aGestiona2 | ag2Guides" %>
<% content_for :icon, "/assets/icon/ag2Guides.png" %>
<% content_for :alt, "ag2Guides" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.root_path %>">ag2Admin</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.config_path %>">ag2Config</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.guides_path %>"><%=t "ag2_admin.breadcrumb.guides.items" %></a><span class="divider">></span>
  </li>
  <% if @subguides %>
  <li>
    <%= t :"ag2_admin.breadcrumb.subguides.items" %>
  </li>
  <% end %>
  <% if @subguide %>
  <li>
    <a href="<%= subguides_path %>"><%= t :"ag2_admin.breadcrumb.subguides.items" %></a><span class="divider">></span>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%= t :"ag2_admin.breadcrumb.subguides.item" %>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%=t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <a class="close" href="<%= ag2_admin.config_path %>">&#215;</a>
</ul>
