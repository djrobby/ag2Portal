<% content_for :title, "aGestiona2 | ag2Sites" %>
<% content_for :icon, "/assets/icon/ag2Sites.png" %>
<% content_for :alt, "ag2Sites" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.root_path %>">ag2Admin</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_admin.config_path %>">ag2Config</a><span class="divider">></span>
  </li>
  <% if @sites %>
  <li>
    ag2Sites
  </li>
  <% end %>
  <% if @site %>
  <li>
    <a href="<%= sites_path %>">ag2Sites</a><span class="divider">></span>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%= @site.name %>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%=t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <a class="close" href="<%= ag2_admin.config_path %>">&#215;</a>
</ul>
