<div id="oco-options-<%= user.id %>" class="modal" style="display: none;">
  <%= simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-inline' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3><%= t('ag2_admin.users.index.change_oco_title', :user => User.find(user.id).name) %></h3>
    </div>
    <div class="modal-body">
      <%= hidden_field_tag :referrer, users_path %>
      <div class="modal-options">
        <%= f.input :office_ids, :collection => Office.order('name'), :as => :check_boxes, :label_method => lambda {|t| t.name}, :label => false, :item_wrapper_class => 'inline' %>
      </div>
      <div class="modal-options" style="padding-top: 5px">
        <%= f.input :company_ids, :collection => Company.order('name'), :as => :check_boxes, :label_method => lambda {|t| t.name}, :label => false, :item_wrapper_class => 'inline' %>
      </div>
      <div style="padding-top: 5px">
        <%= f.input :organization_ids, :collection => Organization.order('name'), :as => :check_boxes, :label_method => lambda {|t| t.name}, :label => false, :item_wrapper_class => 'inline' %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit t('ag2_admin.users.index.btn_change_oco'), :class => "btn btn-primary" %>
      <a class="btn btn-primary" data-dismiss="modal" href="#"><%=t :close_button %></a>
    </div>
  <% end %>
</div>
