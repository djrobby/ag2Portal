<%= render '/layouts/ag2_admin/usersbreadcrumb' %>

<h3><%=t '.title' %></h3>

<%= simple_form_for @user do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<%= f.input :email, :required => true, :autofocus => true %>
<%= f.input :name, :required => true %>
<%= f.input :password, :autocomplete => "off", :required => false %>
<%= f.input :password_confirmation, :required => false %>
<%= f.button :submit, nil, :class => 'btn-primary' %>
<%= link_to(I18n.t('ag2_admin.users.edit.cancel_account'), user_path(@user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-primary') unless @user == current_user %>
<% end %>

<p></p>

<%= link_to I18n.t('ag2_admin.users.edit.btn_show'), @user %> |
<%= link_to I18n.t('ag2_admin.users.back_to_main_page'), users_path %>
