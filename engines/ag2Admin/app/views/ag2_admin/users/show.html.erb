<%= render '/layouts/ag2_admin/usersbreadcrumb' %>

<h3><%= @user.email %></h3>
<table class="table">
  <tbody>
    <tr>
      <td>Username:</td>
      <td><%= @user.name %></td>
      <td>Id:</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>Created at:</td>
      <td><%= @user.created_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %></td>
      <td>Updated at:</td>
      <td><%= @user.updated_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %></td>
    </tr>
    <tr>
      <td>Password reseted at:</td>
      <td><%= @user.reset_password_sent_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") unless @user.reset_password_sent_at.nil? %></td>
      <td>Remember created at:</td>
      <td><%= @user.remember_created_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") unless @user.remember_created_at.nil? %></td>
    </tr>
    <tr>
      <td>Signed in count:</td>
      <td><%= @user.sign_in_count %></td>
      <td>Role:</td>
      <td><%= @user.roles.first.name.titleize unless @user.roles.first.nil? %></td>
    </tr>
    <tr>
      <td>Current signed in at:</td>
      <td><%= @user.current_sign_in_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") unless @user.current_sign_in_at.nil? %></td>
      <td>Current signed in IP:</td>
      <td><%= @user.current_sign_in_ip %></td>
    </tr>
    <tr>
      <td>Last signed in at:</td>
      <td><%= @user.last_sign_in_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") unless @user.last_sign_in_at.nil? %></td>
      <td>Last signed in IP:</td>
      <td><%= @user.last_sign_in_ip %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit User', edit_user_path(@user), :class => 'btn btn-primary' %>
<br />
<br />
<%= link_to 'Back to Users', users_path %>
