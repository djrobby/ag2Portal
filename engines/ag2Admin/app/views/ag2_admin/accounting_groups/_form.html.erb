<%= simple_form_for @accounting_group, :html => {:class => 'form-vertical well' } do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<%= f.input :code, :autofocus => true, :input_html => { class: 'x-small-text-field', maxlength: 1 }, label_html: { class: 'form-label' } %>
<%= f.input :name, :input_html => { :class => 'x-large-text-field', maxlength: 40 }, :label_html => { :class => 'form-label' } %>
<%= f.button :submit, :class => 'btn-primary' %>
<% end %>
