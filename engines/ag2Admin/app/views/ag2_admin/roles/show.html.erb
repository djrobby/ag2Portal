<%= render '/layouts/ag2_admin/usersbreadcrumb' %>

<h3><%= @role.name.titleize %></h3>
<table class="table">
  <tbody>
    <tr>
      <td>Id:</td>
      <td><%= @role.id %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>Created at:</td>
      <td><%= @role.created_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %></td>
      <td>Updated at:</td>
      <td><%= @role.updated_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %></td>
    </tr>
    <tr>
      <td>Resource id:</td>
      <td><%= @role.resource_id %></td>
      <td>Resource type:</td>
      <td><%= @role.resource_type %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit Role', edit_role_path(@role), :class => 'btn btn-primary' %>
<br />
<br />
<%= link_to 'Back to Roles', roles_path %>
