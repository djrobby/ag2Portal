<%= render '/layouts/ag2_admin/usersbreadcrumb' %>

<h3>Roles</h3>
<div class="span3">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name.titleize, role %></td>
        <td><%= link_to edit_role_path(role), :class => 'btn btn-mini' do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(role, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Role', new_role_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Back to Users', users_path %>
</div>
