<%= render '/layouts/ag2_admin/dataimportbreadcrumb' %>

<h3>Data Import Configs</h3>
<div class="span10">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Source</th>
        <th>({Rails.root})Target</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @data_import_configs.each do |config| %>
      <tr>
        <td><%= link_to config.name, config %></td>
        <td><%= config.source unless config.source.nil? %></td>
        <td><%= config.target unless config.target.nil? %></td>
        <td><%= link_to edit_data_import_config_path(config), :class => 'btn btn-mini' do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(config, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Config', new_data_import_config_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Back to ag2Config', ag2_admin.config_path %>
</div>
