<%= render '/layouts/ag2_admin/officesbreadcrumb' %>

<h3><%=t '.title' %></h3>
<div class="span9">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th><%=t 'activerecord.attributes.office.office_code' %></th>
        <th><%=t 'activerecord.attributes.office.name' %></th>
        <th><%=t 'activerecord.attributes.office.company' %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @offices.each do |office| %>
      <tr>
        <td><%= link_to office.office_code, office %></td>
        <td><%= office.name %></td>
        <td><%= office.company.name unless office.company.blank? %></td>
        <td><%= render :partial => '/layouts/crud/edit', :locals => { :model => Office, :path => edit_office_path(office) } %>
        <%= render :partial => '/layouts/crud/delete', :locals => { :model => Office, :path => office, :msg => I18n.t("activerecord.models.office"), :txt => office.name } %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= render :partial => '/layouts/crud/new', :locals => { :model => Office, :path => new_office_path, :txt => I18n.t("ag2_admin.offices.index.btn_new") } %>
  <%= link_to I18n.t("ag2_admin.offices.index.go_to"), companies_path %> |
  <%= link_to I18n.t("ag2_admin.offices.index.back_to_root"), ag2_admin.root_path %>
</div>
