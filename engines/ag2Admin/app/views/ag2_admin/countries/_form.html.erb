<%= simple_form_for @country, :html => {:class => 'form-vertical well' } do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<%= f.input :name, :autofocus => true, :input_html => { :class => 'x-large-text-field' }, :label_html => { :class => 'form-label' } %>
<%= f.input :code, :input_html => { class: 'small-text-field', maxlength: 2 }, label_html: { class: 'form-label' } %>
<%= f.button :submit, :class => 'btn-primary' %>
<% end %>
