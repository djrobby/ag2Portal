<%= render '/layouts/ag2_admin/countriesbreadcrumb' %>

<h3>Countries</h3>
<div class="span6">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, country %></td>
        <td><%= link_to edit_country_path(country), :class => 'btn btn-mini'  do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(country, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Country', new_country_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Back to ag2Admin', ag2_admin.root_path %>
</div>
