<%= render '/layouts/ag2_admin/regionsbreadcrumb' %>

<h3>Regions</h3>
<div class="span7">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @regions.each do |region| %>
      <tr>
        <td><%= link_to region.name, region %></td>
        <td><%= Country.find(region.country).name unless region.country.nil? %></td>
        <td><%= link_to edit_region_path(region), :class => 'btn btn-mini'  do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(region, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Region', new_region_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Go to ag2Countries', countries_path %> |
  <%= link_to 'Go to ag2Provinces', provinces_path %> |
  <%= link_to 'Back to ag2Admin', ag2_admin.root_path %>
</div>
