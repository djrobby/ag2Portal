<%= simple_form_for @town do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<%= f.input :name, :required => true, :autofocus => true %>
<%= f.input :ine_cmun, :required => true %>
<%= f.input :ine_dc, :required => true %>
<%= f.association :province, collection: Province.all(order: 'name') %>
<%= f.button :submit, :class => 'btn-primary' %>
<% end %>
