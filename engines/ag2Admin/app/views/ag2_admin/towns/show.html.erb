<%= render '/layouts/ag2_admin/townsbreadcrumb' %>

<h3><%= @town.name %></h3>
<table class="table">
  <tbody>
    <tr>
      <td>Id:</td>
      <td><%= @town.id %></td>
      <td><%=t 'activerecord.attributes.town.province' %>:</td>
      <td><%= @town.province.name_and_region unless @town.province.blank? %></td>
    </tr>
    <tr>
      <td><%=t 'activerecord.attributes.town.ine_cmun' %>:</td>
      <td><%= @town.ine_cmun %></td>
      <td><%=t 'activerecord.attributes.town.ine_dc' %>:</td>
      <td><%= @town.ine_dc %></td>
    </tr>
    <%= render :partial => '/layouts/createdat_updatedat', :locals => { :ivar => @town } %>
    <%= render :partial => '/layouts/createdby_updatedby', :locals => { :ivar => @town } %>
  </tbody>
</table>

<%= render :partial => '/layouts/crud/update_delete_new', locals:
{ model: Town, update_path: edit_town_path(@town), update_txt: t('ag2_admin.towns.show.btn_edit'),
delete_path: @town, delete_txt: t('ag2_admin.towns.show.btn_delete'), msg: t("activerecord.models.town.one"), :txt => @town.name,
new_path: new_town_path, new_txt: t('ag2_admin.towns.index.btn_new') } %>

<%= link_to I18n.t('ag2_admin.towns.show.show_to'), @town.province %> |
<%= link_to I18n.t('ag2_admin.towns.back_to_main_page'), towns_path %>
