<%= render '/layouts/ag2_admin/townsbreadcrumb' %>

<h3>Towns</h3>
<div class="span7">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Province</th>
        <th>INE CMun</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @towns.each do |town| %>
      <tr>
        <td><%= link_to town.name, town %></td>
        <td><%= Province.find(town.province).name unless town.province.nil? %></td>
        <td><%= town.ine_cmun %></td>
        <td><%= link_to 'Edit', edit_town_path(town), :class => 'btn btn-mini' %>
        <%= link_to("Delete", town, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Town', new_town_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Go to ag2Provinces', provinces_path %> |
  <%= link_to 'Go to ag2Zipcodes', zipcodes_path %> |
  <%= link_to 'Back to ag2Admin', ag2_admin.root_path %>
</div>
