<%= render '/layouts/ag2_admin/companiesbreadcrumb' %>

<h3><%= @company.name %></h3>
<table class="table"
<tbody>
<tr>
<td>Id:</td>
<td><%= @company.id %></td>
<td></td>
<td></td>
</tr>
<tr>
<td>Created at:</td>
<td><%= @company.created_at %></td>
<td>Updated at:</td>
<td><%= @company.updated_at %></td>
</tr>
</tbody>
</table>

<%= link_to 'Edit Company', edit_company_path(@company), :class => 'btn btn-primary' %>
  <br />
  <br />

  <% if (@offices.count > 0) %>
  <h4>Company Offices</h4>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Registered</th>
      </tr>
    </thead>
    <tbody>
      <% @offices.each do |office| %>
      <tr>
        <td><%= office.id %></td>
        <td><%= office.name %></td>
        <td><%= office.created_at.to_date %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

  <%= link_to 'Back to Companies', companies_path %>
