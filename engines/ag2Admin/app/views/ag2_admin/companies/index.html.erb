<%= render '/layouts/ag2_admin/companiesbreadcrumb' %>

<h3>Companies</h3>
<div class="span8">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Fiscal Id</th>
        <th>Registered</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.fiscal_id %></td>
        <td><%= company.created_at.to_date %></td>
        <td><%= link_to 'Edit', edit_company_path(company), :class => 'btn btn-mini' %></td>
        <td><%= link_to("Delete", company, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Company', new_company_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Go to ag2Offices', offices_path %> |
  <%= link_to 'Back to ag2Admin', ag2_admin.root_path %>
</div>
