<script>
  jQuery(function($) {
    // when the #company_town_id field changes
    $("#company_town_id").change(function() {
      // make a POST call and replace the content
      var company = $('select#company_town_id :selected').val();
      if (company == "")
        company = "0";
      jQuery.getJSON('update_province_textfield_from_town/' + company, function(data) {
        $("#company_province_id").val(data.id);
      })
      return false;
    });

    // when the #company_zipcode_id field changes
    $("#company_zipcode_id").change(function() {
      // make a POST call and replace the content
      var company = $('select#company_zipcode_id :selected').val();
      if (company == "")
        company = "0";
      jQuery.getJSON('update_province_textfield_from_zipcode/' + company, function(data) {
        $("#company_town_id").val(data.town_id);
        $("#company_province_id").val(data.province_id);
      })
      return false;
    });
  })
</script>

<%= simple_form_for @company, :html => {:class => 'span12 two-columns-form form-vertical well' } do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<div class="span6 form-column">
  <%= f.input :name, :required => true, :autofocus => true, :input_html => { :class => 'x-large-text-field' } %>
  <%= f.input :fiscal_id, :required => true %>
  <%= f.association :street_type, collection: StreetType.all(order: 'street_type_code') %>
  <%= f.input :street_name, :input_html => { :class => 'large-text-field' } %>
  <%= f.input :street_number, :input_html => { :class => 'x-small-text-field number-text-field' } %>
  <%= f.input :building, :input_html => { :class => 'large-text-field' } %>
  <%= f.input :floor, :input_html => { :class => 'x-small-text-field number-text-field' } %>
  <%= f.input :floor_office, :input_html => { :class => 'x-small-text-field number-text-field' } %>
</div>
<div class="span6 form-column">
  <%= f.association :zipcode, collection: Zipcode.all(order: 'zipcode'), :input_html => { :class => 'large-text-field' } %>
  <%= f.association :town, collection: Town.all(order: 'name'), :input_html => { :class => 'large-text-field' } %>
  <%= f.association :province, collection: Province.all(order: 'name'), :input_html => { :class => 'large-text-field' } %>
</div>
<div class="span12 form-column">
  <%= f.button :submit, :class => 'btn-primary' %>
  <br />
  <br />
</div>
<% end %>
