<tr>
  <th><%= t "activerecord.attributes.invoice_item.code" %></th>
  <th><%= t "activerecord.attributes.invoice_item.subcode" %></th>
  <th><%= t "activerecord.attributes.invoice_item.description" %></th>
  <th><%= t "activerecord.attributes.invoice_item.measure" %></th>
  <th align="right"><%= t "activerecord.attributes.invoice_item.quantity_c" %></th>
  <th align="right"><%= t "activerecord.attributes.invoice_item.price_c" %></th>
  <% if invoice.item_discount_present? %>
  <th align="right"><%= t "activerecord.attributes.invoice_item.discount_pct_c" %></th>
  <th align="right"><%= t "activerecord.attributes.invoice_item.discount_c" %></th>
  <% else %>
  <th></th>
  <th></th>
  <% end %>
  <th align="right"><%= t "activerecord.attributes.invoice_item.amount_c" %></th>
  <th align="right"><%= t "activerecord.attributes.invoice_item.tax_c" %></th>
</tr>
