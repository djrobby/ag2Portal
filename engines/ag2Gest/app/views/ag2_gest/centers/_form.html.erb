<script type="text/javascript">
  $(document).ready(function() {
    // Select2
    $('select.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      allowClear: true
    });
  });
</script>

<%= simple_form_for @center, :html => {:class => 'form-vertical well' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <div>
    <label class="multi-field-label-two"> <%= f.input :code, :required => true, :autofocus => true, :input_html => { onkeyup: "caps(this)", :class => 'large-text-field', maxlength: 3 }, :label_html => { :class => 'form-label' } %> </label>
    <label class="multi-field-label-two"> <%= f.input :name, :required => true, :input_html => { :class => 'x-large-text-field' }, :label_html => { :class => 'form-label' } %> </label>
  </div>
  <div>
    <label class="multi-field-label-two"> <%= f.association :town, collection: @towns, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %> </label>
    <label class="multi-field-label-two"> <%= f.input :active, input_html: { class: 'mid-text-field' }, label_html: { class: 'form-label' }, boolean_style: :inline %> </label>
  </div>
  <%= f.button :submit, :class => 'btn-primary' %>
<% end %>
