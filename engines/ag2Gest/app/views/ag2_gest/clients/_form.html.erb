  <tbody>
    <tr class="form-tr underlined-tr">
      <td class="form-td-two left-winged">
        <h4><%= t 'ag2_purchase.suppliers.accounts_info' %></h4>
      </td>
      <td class="form-td-two right-winged">
        <%= link_to_add_fields(t("ag2_purchase.suppliers.btn_new_account"), f, :client_bank_accounts, "account_fields", "new-account-fields", class: "btn btn-warning fnt-new-btn") %>
