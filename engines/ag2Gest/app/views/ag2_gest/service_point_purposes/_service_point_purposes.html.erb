<script>
  $(document).ready(function() {
    $("#div_table th a, #div_table #pages a").on("click", function() {
      $.getScript(this.href);
      return false;
    });
  }); 
</script>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= sortable "id", t('activerecord.attributes.service_point_purpose.id') %></th>
      <th><%= sortable "name", t('activerecord.attributes.service_point_purpose.name') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @service_point_purposes.each do |service_point_purpose| %>
      <tr>
        <td><%= service_point_purpose.try(:id) %></td>
        <td><%= link_to service_point_purpose.try(:name), service_point_purpose_path(service_point_purpose) %></td>
        <td> <%= render :partial => '/layouts/crud/edit', :locals => { :model => ServicePointPurpose, :path => edit_service_point_purpose_path(service_point_purpose) } %>
        <%= render :partial => '/layouts/crud/delete', :locals => { :model => ServicePointPurpose, :path => service_point_purpose, :msg => t("activerecord.models.service_point_purpose.one"), :txt => service_point_purpose.name } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render :partial => '/layouts/pagination', :locals => { :ivar => @service_point_purposes } %>
<%= render :partial => '/layouts/crud/new', :locals => { :model => ServicePointPurpose, :path => new_service_point_purpose_path, :txt => t("ag2_gest.service_point_purposes.index.btn_new") } %>
<%= link_to t("ag2_gest.service_point_purposes.index.back_to_management"), ag2_gest.service_point_management_path %>
