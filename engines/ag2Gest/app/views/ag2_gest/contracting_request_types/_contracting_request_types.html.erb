<script>
  $(document).ready(function() {
    $("#div_table th a, #div_table #pages a").on("click", function() {
      $.getScript(this.href);
      return false;
    });
  }); 
</script>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= sortable "id", t('activerecord.attributes.contracting_request_type.id') %></th>
      <th><%= sortable "description", t('activerecord.attributes.contracting_request_type.description') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contracting_request_types.each do |cont_request| %>
    <tr>
      <td><%= cont_request.try(:id)  %></td>
      <td><%= cont_request.try(:description)%></td>
      <td> 
        <%= render :partial => '/layouts/crud/read', :locals => { :model => ContractingRequestType, :path => contracting_request_type_path(cont_request) } %>
        <%= render :partial => '/layouts/crud/edit', :locals => { :model => ContractingRequestType, :path =>  edit_contracting_request_type_path(cont_request) } %>
        <%= render :partial => '/layouts/crud/delete', :locals => { :model => ContractingRequestType, :path => cont_request, :msg => t("activerecord.models.contracting_request_type.one"), :txt => cont_request.description } %> </td>
    </tr>
   <% end %>
  </tbody>
</table>

<%= render :partial => '/layouts/pagination', :locals => { :ivar => @contracting_request_types } %>
<%= render :partial => '/layouts/crud/new', :locals => { :model => ContractingRequestType, :path => new_contracting_request_type_path, :txt => t("ag2_gest.contracting_request_types.index.btn_new") } %>
<%= link_to t("ag2_gest.contracting_requests.index.back_to_management"), ag2_gest.contracting_management_path %>
