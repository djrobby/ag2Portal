<%= render '/layouts/ag2_gest/billingfrequenciesbreadcrumb' %>

<h3><%=@billing_frequency.try(:name) %></h3>
<table class="table">
  <tbody>
    <tr>
      <td><%= t('activerecord.attributes.billing_frequency.frequency_id') %>:</td>
      <td><%= @billing_frequency.try(:id) %></td>
      <td><%= t('activerecord.attributes.billing_frequency.name') %>:</td>
      <td><%= @billing_frequency.try(:name) %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.billing_frequency.days') %>:</td>
      <td><%= @billing_frequency.try(:days) %></td>
      <td><%= t('activerecord.attributes.billing_frequency.months') %>:</td>
      <td><%= @billing_frequency.try(:months) %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.billing_frequency.fix_measure_id') %>:</td>
      <td><%= @billing_frequency.try(:fix_measure).try(:description) %></td>
      <td><%= t('activerecord.attributes.billing_frequency.var_measure_id') %>:</td>
      <td><%= @billing_frequency.try(:var_measure).try(:description) %></td>
