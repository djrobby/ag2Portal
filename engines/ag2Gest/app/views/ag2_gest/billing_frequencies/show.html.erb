      <%= render :partial => '/layouts/createdat_updatedat', :locals => { :ivar => @billing_frequency } %>
      <%= render :partial => '/layouts/createdby_updatedby', :locals => { :ivar => @billing_frequency } %>
  </tbody>
</table>

<%= render partial: '/layouts/crud/update_delete_new', locals:
{ model: BillingFrequency, update_path: edit_billing_frequency_path(@billing_frequency), update_txt: t('.btn_edit'),
delete_path: @billing_frequency, delete_txt: t('.btn_delete'), msg: t("activerecord.models.billing_frequency.one"), :txt => @billing_frequency.name,
new_path: new_billing_frequency_path, new_txt: t('ag2_gest.billing_frequencies.index.btn_new') } %>

<%= link_to I18n.t('ag2_gest.billing_frequencies.back_to_main_page'), billing_frequencies_path %>
