<script>
  var _thisForm = '';
  var changing = false;

  $(document).ready(function() {
    $('.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      dropdownCssClass: 'shrinked',
      dropdownAutoWidth: true
    });
    $('.nsel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      allowClear: true
    });
    $('.ndate_picker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    }).on('changeDate', function(e){
      $('.ndate_picker').datepicker('hide');
    });
    // Initialized form variable
    _thisForm = $("#Supplier").closest('form')[0];
  });

  $(document).ajaxStart(function() {
    // show loader on start
    if (changing == false) {
      $("#div_table").html("");
      $("#loader").show();
    }
  }).ajaxSuccess(function() {
    // hide loader on success
    $("#loader").hide();
  });

  $(window).bind("load", function() {
    $("#Subscriber").select2("val", "<%= params[:Supplier] %>");
    $("#ReadingRoute").select2("val", "<%= params[:Project] %>");
    $("#Meter").select2("val", "<%= params[:Order] %>");
    $("#Order").select2("val", "<%= params[:Order] %>");
    $("#Caliber").select2("val", "<%= params[:Order] %>");
  });

  jQuery(function($) {
    // when the #removeFilter button clicked
    $("#removeFilter").click(function() {
      $("#Gis").val("");
      $("#Subscriber").select2("val", "");
      $("#ReadingRoute").select2("val", "");
      $("#Meter").select2("val", "");
      $("#Order").select2("val", "");
      $("#Caliber").select2("val", "");
      $("#search").val("");
      // no AJAX
      //_thisForm.submit();
      // AJAX
      $("#submit_btn").trigger("click");
    });
  });
</script>

