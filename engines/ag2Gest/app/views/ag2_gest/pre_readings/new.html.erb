<script type="text/javascript">
$(document).ready(function() {
  // Select2
  $('select.sel2').select2({
    formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
    allowClear: true
  });
});
</script>

<%= render '/layouts/ag2_gest/prereadingsbreadcrumb' %>

<h3><%=t 'activerecord.attributes.pre_reading.generate_readings' %></h3>

<%= simple_form_for :prereading, url: pre_readings_path, method: :post, :html => {:class => 'form-vertical well', multiple: "multiple"} do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>

<div class="row-fluid">
  <div class="span6">
    <%= f.input :period, label: t('activerecord.attributes.reading.billing_period_id'), collection: @billing_periods, input_html: {class: "mid-text-field"}, :label_html => { :class => 'form-label' } %>
  </div>
  <div class="span6">
    <%= f.input :reading_routes, label: t('activerecord.attributes.reading.reading_route'), collection: @reading_routes, input_html: {class: "sel2 mid-text-field multiple", multiple: "multiple"}, :label_html => { :class => 'form-label' } %>
  </div>
</div>

<%= f.button :submit, "Generar",:class => 'btn-primary' %>
<% end %>

<%= link_to I18n.t('ag2_gest.pre_readings.back_to_main_page'), pre_readings_path %>
