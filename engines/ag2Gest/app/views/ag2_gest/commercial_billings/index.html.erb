<script>
  var _thisForm = '';
  var changing = false;

  $(document).ready(function() {
    $('.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      dropdownCssClass: 'shrinked',
      dropdownAutoWidth: true
    });
    $('.nsel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      allowClear: true
    });
    $('.ndate_picker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    }).on('changeDate', function(e){
      $('.ndate_picker').datepicker('hide');
    });
    // Initialized form variable
    _thisForm = $("#Client").closest('form')[0];
  }); 

  $(document).ajaxStart(function() {
    // show loader on start
    if (changing == false) {
      $("#div_table").html("");
      $("#loader").show();
    }
  }).ajaxSuccess(function() {
    // hide loader on success
    $("#loader").hide();
  });

  $(window).bind("load", function() {
    $("#No").val("<%= params[:No] %>");
    $("#Project").select2("val", "<%= params[:Project] %>");
    $("#Client").val("<%= params[:Client] %>");
    $("#Subscriber").val("<%= params[:Subscriber] %>");
    $("#Status").select2("val", "<%= params[:Status] %>");
    $("#Type").select2("val", "<%= params[:Type] %>");
    $("#Operation").select2("val", "<%= params[:Operation] %>");
    $("#Biller").select2("val", "<%= params[:Biller] %>");
    $("#Period").select2("val", "<%= params[:Period] %>");
  });

  jQuery(function($) {
    // when the #removeFilter button clicked
    $("#removeFilter").click(function() {
      $("#No").val("");
      $("#Project").select2("val", "");
      $("#Client").val("");
      $("#Subscriber").val("");
      $("#Status").select2("val", "");
      $("#Type").select2("val", "");
      $("#Operation").select2("val", "");
      $("#Biller").select2("val", "");
      $("#Period").select2("val", "");
      $("#search").val("");
      // no AJAX
      //_thisForm.submit();
      // AJAX
      $("#submit_btn").trigger("click");
    });
  });
</script>

