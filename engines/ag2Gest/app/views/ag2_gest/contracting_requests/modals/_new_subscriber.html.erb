    <%#= f.input :subscriber_code, :as => :hidden, :input_html => { :value => sub_next_no(project.office_id) } %>

    <h4><%= t('activerecord.attributes.contracting_request.data_installation_meter') %></h4>
    <%= f.simple_fields_for :meter_details, @subscriber.meter_details.build do |m| %>
      <%= m.input :installation_date, required: true, start_year: Time.now.year - 100, end_year: Time.now.year + 100, as: :string, input_html: { value: Date.today.strftime("%d/%m/%Y"), class: 'x-large-text-field date_picker' }, label_html: { class: 'form-label' } %>
      <%= m.input :installation_reading, required: true, input_html: { class: 'x-large-text-field', value: @contracting_request.try(:old_subscriber).try(:readings).try(:last).try(:reading_index) }, label_html: { class: 'form-label' } %>
      <%= m.association :meter_location, required: true, collection: MeterLocation.all, selected: @contracting_request.try(:old_subscriber).try(:meter_details).try(:last).try(:meter_location_id), input_html: { class: 'x-large-text-field sel2', value: @contracting_request.try(:old_subscriber).try(:meter_details).try(:last).try(:meter_location).try(:name) }, label_html: { class: 'form-label' }, include_blank: true, label: 'LocalizaciÃ³n contador' %>
    <% end %>

    <%= f.simple_fields_for :readings, @subscriber.readings.build do |s| %>
      <%= s.association :billing_period, required: true, collection: BillingPeriod.find_all_by_project_id(@projects_ids), input_html: { class: 'x-large-text-field sel2' }, label_html: { class: 'form-label' }, include_blank: true, label: t('activerecord.attributes.contracting_request.billing_period_id') %>
    <% end %>

  </div>
  <div class="modal-footer">
    <%= f.submit t("activerecord.attributes.contracting_request.accept"), disable_with: t("activerecord.attributes.pre_reading.loading"), :class => "btn btn-primary" %>
    <a class="btn btn-primary" data-dismiss="modal" href="#"><%= t :close_button %></a>
  </div>
  <% end %>
</div>
