<div id="new-subscriber" class="modal fade" style="display: none;">
  <%= simple_form_for [@contracting_request, @subscriber], :remote => :true, :html => { "data-type" => :json, :class => 'form-inline', :id => 'form_new_subscriber' } do |f| %>
