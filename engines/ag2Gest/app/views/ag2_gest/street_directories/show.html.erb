<%= render '/layouts/ag2_gest/sdirectorybreadcrumb' %>

<h3><%= t('.title') %></h3>
<table class="table">
  <tbody>
    <tr>
      <td><%= t('activerecord.attributes.street_directory.id') + ": " %></td>
      <td><%= @street_directory.try(:id) %></td>
      <td><%= t('activerecord.attributes.street_directory.alt_code') + ": " %></td>
      <td><%= @street_directory.try(:alt_code) %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.street_directory.street_name') + ": " %></td>
      <td colspan="3"><%= @street_directory.try(:street_name) %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.street_directory.street_type') + ": " %></td>
      <td><%= @street_directory.try(:street_type).try(:street_type_description) %></td>
      <td><%= t('activerecord.attributes.street_directory.town') + ": " %></td>
      <td><%= @street_directory.try(:town).try(:to_label)%></td>
    </tr>
    <%= render :partial => '/layouts/createdat_updatedat', :locals => { :ivar => @street_directory } %>
    <%= render :partial => '/layouts/createdby_updatedby', :locals => { :ivar => @street_directory } %>
  </tbody>
</table>

<%= render partial: '/layouts/crud/update_delete_new', locals:
{ model: StreetDirectory, update_path: edit_street_directory_path(@street_directory), update_txt: t('.btn_edit'),
delete_path: @street_directory, delete_txt: t('.btn_delete'), msg: t("activerecord.models.street_directory.one"), :txt => @street_directory.street_name,
new_path: new_street_directory_path, new_txt: t('ag2_gest.street_directories.index.btn_new') } %>

<%= link_to I18n.t('ag2_gest.street_directories.back_to_main_page'), street_directories_path %>
