  <li>
     Consumos
  </li>
</ul>

<h3><%= t('activerecord.attributes.bill.massive_billing_consumption') %></h3>
<div class="container-fluid">
  <div class="row-fluid">
		<div class="span12" id="div_table">
			<table class="table table-condensed table-striped shrinked stu">
			  <thead>
			    <tr>
			      <th>Nº</th>
            <th><%= t('activerecord.attributes.bill.total') %></th>
            <th><%= t('activerecord.attributes.bill.consumption') %></th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @bills.each do |bill| %>
			    	<tr>
  			    		<td>
                  <%= bill.full_no %>
                </td>
                <td>
                  <%= bill.total %>
                </td>
                <td>
                  <%= bill.reading.consumption %>
                </td>
            </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
    <div class="row">
      <a class="btn btn-warning pull-right"><%= t('activerecord.attributes.bill.export_google') %></a>
    </div>
  </div>
</div>
