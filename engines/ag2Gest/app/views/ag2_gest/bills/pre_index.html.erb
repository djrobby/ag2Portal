<style>
  .center {
    text-align: center!important;
  }
</style>
<% content_for :title, "aGestiona2 | ag2PreBills" %>
<% content_for :icon, "/assets/icon/TableA.png" %>
<% content_for :alt, "ag2PreBills" %>

<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_gest.root_path %>">ag2Gest</a><span class="divider">></span>
  </li>
  <li>
    Prefacturas
  </li>
</ul>

<h3>Prefacturas</h3>

<div class="container-fluid">
  <div class="row-fluid">

    <div class="span3">
      <div class="well sidebar-nav">
        <!-- Buttons -->
        <%= link_to "Generar PreFacturas", new_bill_path, class: "btn btn-block btn-primary" %>
        <%= link_to "Confirmar PreFacturas", bills_path, class: "btn btn-block btn-primary" %>
        <br /><br />
        <%= link_to "Volver ag2Gest", ag2_gest.root_path %>
      </div><!-- /.sidebar-nav -->
    </div><!-- /.span3 -->

    <div class="span9" id="div_table">
      <table class="table table-condensed table-striped shrinked">
        <thead>
          <tr>
            <th>Grupo nº</th>
            <th>Fecha</th>
            <th>Nº prefacturas</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @pre_bills.each do |pre_bill| %>
            <tr>
              <td><%= link_to pre_bill[1].first.pre_group_no, bills_path(:bills => pre_bill[1].first.pre_group_no) %></td>
              <td><%=l pre_bill[1].first.bill_date %></td>
              <td><%= pre_bill[1].count %></td>
              <td><%= pre_bill[1].sum{|b| b.total} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.span9 -->

  </div><!-- /.row-fluid -->
</div><!-- /.container-fluid -->
