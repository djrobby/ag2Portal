<script>
  $(document).ready(function() {
    $("#div_table #pages a").on("click", function() {
      $.getScript(this.href);
      return false;
    });
    $('.accor').click(function () {
      if (this.classList.contains("collapsed")){
        this.children[0].className = "icon-minus";
      }else {
        this.children[0].className = "icon-plus";
      }
    });
  });
</script>
<div class="row">
  <div class="span4"><h5><b><%= I18n.t("ag2_gest.bills.index.total_subscribers") %>:</b> <%= @bills.count unless @bills.blank? %></h5></div>
  <div class="span4" align="center"><h5><b><%= I18n.t("ag2_gest.bills.index.total_consumptions") %>:</b> <%= @bills.map(&:reading_2).flatten.compact.sum{|r| r.consumption } unless @bills.blank?  %> m<sup>3</sup></h5></div>
  <div class="span4" align="right"><h5><b><%= I18n.t("ag2_gest.bills.index.total_bills") %>:</b> <%= number_with_precision(@bills.sum{|b| b.total}, precision: 2, delimiter: I18n.locale == :es ? "." : ",") unless @bills.blank?  %></h5></div>
</div>
<br/>
<div class="row">
  <div class="span1"></div> <!-- Space for icon-plus -->
  <div class="span1">
    <b>Id</b>
  </div>
  <div class="span1">
    <b>Periodo</b>
  </div>
  <div class="span4 text-center">
    <b>Abonado</b>
  </div>
  <div class="span1">
    <b>Contador</b>
  </div>
  <div align="right" class="span1">
    <b>Consumo</b>
  </div>
  <div align="right" class="span1">
    <b>Total</b>
  </div>
  <div class="span1">
    <b>¿Facturado?</b>
  </div>
  <div class="span1">
  </div>
</div>
<% @bills.each do |b| %>

<!-- RENDER2 FACTURA DE SUMINISTRO-->
<div class="accordion">
  <div class="accordion-group">
    <div class="accordion-heading row">
      <div class="span1">
        <a class="accor accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion2" href="#collapse-<%= b.id %>"><i class='icon-plus'></i></a>
      </div>
      <div class="span1 soft-padding">
        <%= b.bill_id.blank? ? b.id : b.bill_id %>
      </div>
      <div class="span1 soft-padding">
        <%= b.try(:pre_invoices).first.try(:billing_period).try(:period) %>
      </div>
      <div class="span4 soft-padding">
        <%= link_to b.subscriber.to_label, subscriber_path(b.subscriber) %>
      </div>
      <div class="span1 soft-padding">
        <%= link_to b.subscriber.try(:meter).try(:meter_code), meter_path(b.subscriber.meter) unless b.subscriber.try(:meter).blank? %>
      </div>
      <div align="right" class="span1 soft-padding">
        <%= b.reading.try(:consumption_total_period) || 0 %>
      </div>
      <div align="right" class="span1 soft-padding">
        <%= number_with_precision(b.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %>
      </div>
      <div class="span1 text-center">
        <% if b.bill %> <i class="icon-thumbs-up"></i> <% else %> <i class="icon-thumbs-down"></i> <% end %>
      </div>
      <div class="span1 soft-padding pull-right">
      <%= render :partial => '/layouts/crud/delete', :locals => { :model => PreBill, :path => bill_path(b, bills: b.pre_group_no), :msg => t("activerecord.models.bill.one"), :txt => b.id } if b.bill.blank? %>
       <%= link_to "<i class='icon-print'></i>".html_safe, biller_pdf_bill_path(b.bill_id, :format => :pdf), target: "_blank", class: "btn btn-mini"  if b.bill %>
      </div>
    </div>
    <div id="collapse-<%= b.id %>" class="accordion-body collapse">
      <div class="accordion-inner">
        <% b.pre_invoices.each do |invoice| %>
          <table class="table">
            <div><small><%= t("activerecord.attributes.contracting_request.invoice_number") %>: <%= invoice.try(:invoice).try(:full_no) %></small></div>
            <div><small><%= invoice.try(:biller).try(:name) %> | <%= t("activerecord.attributes.contracting_request.fiscal_id") %> <%= invoice.try(:biller).try(:fiscal_id) %></small></div>
            <tr>
              <th><%= t("activerecord.attributes.contracting_request.code") %></th>
              <th><%= t("activerecord.attributes.contracting_request.subcode") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.quantity") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.price") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.amount") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.tax") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.discount") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.discount_pct") %></th>
              <th align="right"><%= t("activerecord.attributes.contracting_request.total") %></th>
            </tr>
            <% invoice.pre_invoice_items.each do |item| %>
              <tr>
                <td><%= item.code %></td>
                <td><%= item.subcode_name %></td>
                <td align="right"><%= number_with_precision(item.quantity, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <td align="right"><%= number_with_precision(item.price, precision: 6, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <td align="right"><%= number_with_precision(item.amount, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <td align="right"><%= number_with_precision(item.tax_type.try(:tax), precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <td align="right"><%= number_with_precision(item.discount, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <td align="right"><%= number_with_precision(item.discount_pct, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <td align="right"><%= number_with_precision(item.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
              </tr>
            <% end %>
            <tr class="subtotal">
              <td colspan="7" class="no-boder"></td>
              <td class="black-border"><b><%= t('activerecord.attributes.subscriber.subtotal').upcase %></b></td>
              <td align="right" class="black-border"><%= number_with_precision(invoice.subtotal, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
            </tr>
            <% invoice.tax_breakdown.each do |tax| %>
              <% if tax[0] != TaxType.exempt.tax %>
                <tr>
                  <td colspan="5" class="no-boder"></td>
                  <td class="no-boder"><b>Base imponible:</b>&nbsp;&nbsp;  <%= number_with_precision(tax[1], precision: 4, delimiter: I18n.locale == :es ? "." : ",")  %></td>
                  <td class="no-boder"><%= "#{pluralize(tax[3], 'artículo')}"  %></td>
                  <td><b><%= " #{t('activerecord.attributes.subscriber.vat')} (#{tax[0]}%)" %></b></td>
                  <td align="right"><%= number_with_precision(tax[2], precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                </tr>
              <% end %>
            <% end %>
            <tr>
              <td colspan="7" class="black-border"></td>
              <td class="black-border"><b><%= t('activerecord.attributes.subscriber.total').upcase %></b></td>
              <td  align="right" class="black-border"><%= number_with_precision(invoice.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
            </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= render :partial => '/layouts/pagination', :locals => { :ivar => @bills } %>

<br/>
<% if @bills and @bills.first.bill_id.nil? %>
  <a href="#confirm-bills" role="button" class="btn btn-primary" data-toggle="modal">Confirmar facturas</a>
<% end %>
<br/>
<br/>
<%= link_to t("ag2_gest.bills.index.back_to_pre_index"), ag2_gest.pre_index_bills_path %>


<!-- Modal -->
<div id="confirm-bills" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="ConfirmarBills" aria-hidden="true">
  <%= simple_form_for :pre_bill, url: confirm_bills_path, method: :get do |f| %>
    <%= f.input :ids, :as => :hidden, :input_html => { :value =>  params[:bills] } %>
    <div class="modal-header">
      <h4>Confirmar facturas</h4>
    </div>
    <div class="modal-body">
      <%= f.input :confirmation_date, required: true, label: I18n.t("ag2_gest.bills.index.confirmation_date"), :label_html => { :class => 'form-label' }, :input_html => {class: "string required mid-text-field date_picker", value: formatted_date(Date.today)} %>
      <%= f.input :invoice_date, required: false, label: I18n.t("ag2_gest.bills.index.invoice_date"), :label_html => { :class => 'form-label' }, :input_html => {class: "mid-text-field date_picker", value: formatted_date(@bills.first.pre_invoices.first.try(:billing_period).try(:billing_starting_date))} %>
      <%= f.input :payday_limit, required: false, label: I18n.t("ag2_gest.bills.index.payday_limit"), :label_html => { :class => 'form-label' }, :input_html => {class: "mid-text-field date_picker", value: formatted_date(@bills.first.pre_invoices.first.try(:billing_period).try(:billing_ending_date))} %>
    </div>
    <div class="modal-footer">
      <%= f.button :submit, "Confirmar facturas", disable_with: t("activerecord.attributes.pre_reading.loading"), :class => 'btn btn-primary' %>
      <a class="btn btn-primary" data-dismiss="modal" href="#"><%= t :close_button %></a>
    </div>
  <% end %>
</div>
