<div class="row-fluid">
  <div class="span4"><h5><b><%= I18n.t("ag2_gest.client_payments.index.total") %>:</b> <%= @bills_charged.count unless @bills_charged.blank?  %></h5></div>
  <div class="span4" align="center"><h5><b><%= I18n.t("ag2_gest.client_payments.index.total_consumptions") %>:</b> <%= @bills_charged.map(&:reading_2).flatten.compact.sum{|r| r.consumption } unless @bills_charged.blank?  %> m<sup>3</sup></h5></div>
  <div class="span4" align="right"><h5><b><%= I18n.t("ag2_gest.client_payments.index.total_bills") %>:</b> <%= number_with_precision(@bills_charged.sum{|b| b.total}, precision: 2, delimiter: I18n.locale == :es ? "." : ",") unless @bills_charged.blank?  %></h5></div>
</div>
<% @bills_charged.each do |bill| %>
  <div class="accordion">
    <div class="accordion-group">
      <div class="accordion-heading row-fluid">
        <div class="span1">
          <a class="accor accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion2" href="#collapse-<%= bill.id %>"><i class='icon-plus'></i></a>
        </div>
        <div class="span3 soft-padding">
          <%= link_to bill.try(:full_no), bill_path(bill) %>
        </div>
        <div class="span5 soft-padding">
          <%= link_to bill.client.to_label, client_path(bill.client) if bill.client %>
        </div>
        <div class="span1 soft-padding">
          <%= "Bco." if bill.client.active_bank_accounts?  %>
        </div>
        <div align="right" class="span2 soft-padding">
          <%= number_with_precision(bill.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %>
        </div>
      </div>

      <div id="collapse-<%= bill.id %>" class="accordion-body collapse">
        <div class="accordion-inner">
          <table class="table table-condensed table-striped">
            <thead>
              <tr>
                <th>NÂº</th>
                <th>Fecha</th>
                <th align="right">Total</th>
                <th align="right">Cobrado</th>
                <th align="right">Deuda</th>
                <th align="right">Estado</th>
              </tr>
            </thead>
            <tbody>
              <% bill.invoices.order("created_at DESC").each do |i| %>
                <tr>
                  <td><%= i.invoice_no %></td>
                  <td><%= i.invoice_date.strftime("%d/%m/%Y") %></td>
                  <td align="right"><%= number_with_precision(i.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.collected, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.debt, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.invoice_status.name, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render :partial => '/layouts/pagination', :locals => { :ivar => @bills_charged } %>
