<% @bills_charged.each do |bill| %>
  <div class="accordion">
    <div class="accordion-group">
      <div class="accordion-heading row-fluid">
        <div class="span1">
          <a class="accor accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion2" href="#collapse-<%= bill.id %>"><i class='icon-plus'></i></a>
        </div>
        <div class="span3 soft-padding">
          <%= link_to bill.try(:full_no), bill_path(bill) %>
        </div>
        <div class="span5 soft-padding">
          <%= link_to bill.client.to_label, client_path(bill.client) if bill.client %>
        </div>
        <div class="span1 soft-padding">
          <%= "Bco." if bill.client.active_bank_accounts?  %>
        </div>
        <div class="span2 soft-padding">
          <%= bill.total %>
        </div>
      </div>

      <div id="collapse-<%= bill.id %>" class="accordion-body collapse">
        <div class="accordion-inner">
          <table class="table table-condensed table-striped">
            <thead>
              <tr>
                <th>NÂº</th>
                <th>Fecha</th>
                <th align="right">Total</th>
                <th align="right">Cobrado</th>
                <th align="right">Deuda</th>
                <th align="right">Estado</th>
              </tr>
            </thead>
            <tbody>
              <% bill.invoices.order("created_at DESC").each do |i| %>
                <tr>
                  <td><%= i.invoice_no %></td>
                  <td><%= i.invoice_date %></td>
                  <td align="right"><%= i.total %></td>
                  <td align="right"><%= i.collected %></td>
                  <td align="right"><%= i.debt %></td>
                  <td align="right"><%= i.invoice_status.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render :partial => '/layouts/pagination', :locals => { :ivar => @bills_charged } %>
