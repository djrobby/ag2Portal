<div class="row-fluid">
  <b>
  <div class="span6"><h5><%= I18n.t("activerecord.models.bill.few") %>: <%= @pending_totals.bills  %></h5></div>
  <div class="span6" align="right"><h5><%= I18n.t("ag2_gest.client_payments.index.total_bills") %>: <%= number_with_precision(@pending_totals.totals, precision: 2, delimiter: I18n.locale == :es ? "." : ",") %></h5></div>
  </b>
</div>

<div class="row-fluid">
  <div class="span12">
    <input type="checkbox" class="checkbox-main">
    <a href="#modal-cash" role="button" class="btn btn-primary btn-small btn-payment btn-cash" data-toggle="modal">Caja</a>
    <a href="#modal-bank" role="button" class="btn btn-primary btn-small btn-payment" data-toggle="modal">Banco</a>
    <!-- <a href="#" class="btn btn-primary btn-small">Ventanilla Bancaria</a> -->
    <a href="#modal-fracionated" role="button" class="btn btn-primary btn-small btn-payment" data-toggle="modal">Aplazamientos</a>
    <a href="#modal-cash" role="button" class="btn btn-primary btn-small btn-payment btn-others" data-toggle="modal">Otros</a>
    <!-- <a href="#" class="btn btn-primary btn-small pull-right">Devoluciones</a> -->
  </div>
</div>

<% if !@bills_pending.blank? %>
<% @bills_pending.each do |bill| %>
  <div class="accordion">
    <div class="accordion-group">
      <div class="accordion-heading row-fluid">
        <div class="span2">
          <input type="checkbox" class="checkbox-master pull-left" <%= 'disabled' if bill.invoice_status_id != 1 %>>
          <a class="accor accordion-toggle collapsed pull-left" data-toggle="collapse" data-parent="#accordion2" href="#collapse-<%= bill.id %>"><i class='icon-plus'></i></a>
        </div>
        <div class="span3 soft-padding">
          <%= link_to bill.try(:full_no), bill_path(bill) %>
        </div>
        <div class="span4 soft-padding">
          <%= link_to bill.client.to_label, client_path(bill.client) if bill.client %>
        </div>
        <div class="span1 soft-padding">
          <%= "Bco." if bill.client.active_bank_accounts?  %>
        </div>
        <div align="right" class="span2 soft-padding">
           <%= number_with_precision(bill.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %>
        </div>
      </div>
    </div>

    <div id="collapse-<%= bill.id %>" class="accordion-body collapse">
      <div class="accordion-inner">
        <table class="table table-condensed table-striped">
          <thead>
            <tr>
              <th></th>
              <th>NÂº</th>
              <th>Fecha</th>
              <th>Vencimiento</th>
              <th align="right">Total</th>
              <th align="right">Cobrado</th>
              <th align="right">Deuda</th>
              <th align="right">Estado</th>
            </tr>
          </thead>
          <tbody>
            <% bill.invoices.order("created_at DESC").each do |i| %>
              <tr class="<%= 'text-error' if i.unpaid? %>">
                <td><%= (check_box_tag 'invoice_id', i.id, false, class: "checkbox-slave", :data => {total: i.total, collected: i.collected, debt: i.debt}) if i.invoice_status_id == 1 %></td>
                <td><%= i.invoice_no %></td>
                <td><%= formatted_date(i.invoice_date) unless i.invoice_date.blank? %></td>
                <td><%= formatted_date(i.payday_limit) unless i.payday_limit.blank? %></td>
                <% if i.bill.try(:instalments).blank? %>
                  <td align="right"><%= number_with_precision(i.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.collected, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.debt, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <% else %>
                  <td align="right"><%= number_with_precision(i.bill.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.bill.client_payments.sum("amount"), precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                  <td align="right"><%= number_with_precision(i.bill.total - i.bill.client_payments.sum("amount"), precision: 4, delimiter: I18n.locale == :es ? "." : ",") %></td>
                <% end %>
                <td align="right"><%= i.invoice_status.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<%= render :partial => '/layouts/pagination', :locals => { :ivar => @bills_pending } %>
<% end %>
