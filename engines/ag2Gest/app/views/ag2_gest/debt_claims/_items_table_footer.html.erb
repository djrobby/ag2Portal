<tr class="totals">
  <td></td>
  <td><a id="icon-new-btn" href="#" onclick="javascript:$('.fnt-new-btn').click(); return false;"><i class="icon-plus"></i></a></td>
  <td align="right"><%= t "activerecord.attributes.debt_claim.totals" %></td>
  <td></td>
  <td></td>
  <td></td>
  <td align="right" id="foot-debt"><%= number_with_precision(claim.debt, precision: 4, delimiter: I18n.locale == :es ? "." : ",") unless claim.debt.blank? %></td>
  <td align="right" id="foot-total"><%= number_with_precision(claim.total, precision: 4, delimiter: I18n.locale == :es ? "." : ",") unless claim.total.blank? %></td>
  <td align="right" id="foot-current-total"><%= number_with_precision('0', precision: 4) %></td>
  <td><a href="#" onclick="javascript:$('#items-table').trigger('totals'); return false;"><i class="icon-refresh"></i></a></td>
</tr>
