<script>
  $(document).ready(function() {
    $('.date_picker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    });
    $('.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      dropdownCssClass: 'shrinked',
      dropdownAutoWidth: true
    });
  });
</script>
 
<%= render '/layouts/ag2_purchase/contactsbreadcrumb' %>
<%= render :partial => '/layouts/searchhead', :locals => { :title => t(".title"), :path => supplier_contacts_path } %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well sidebar-nav">
        <%= form_tag "supplier_contacts", :method => 'get' do %>
        <!-- Supplier -->
        <%= label_tag t(".label_supplier"), nil, :class => 'form-label' %>
        <%= select_tag "Supplier", options_from_collection_for_select(Supplier.order('name').all, "id", "name"), :prompt => "", :class => 'x-large-text-field shrinked sel2' %>
        <!-- Others -->
        <%= label_tag t(".label_others"), nil, :class => 'form-label-under-sel2' %>
        <%= text_field_tag :search, params[:search], :class => 'x-large-text-field shrinked' %>
        <!-- Submit -->
        <%= submit_tag t(".btn_apply"), :class => 'btn btn-primary' %>
        <% end %>
        <!-- Buttons -->
        <%= render :partial => '/layouts/crud/new', :locals => { :model => SupplierContact, :path => new_supplier_contact_path, :txt => t(".btn_new") } %>
        <%= link_to t(".back_to_main_app"), suppliers_path %><br />
        <%= link_to t(".back_to_root"), ag2_purchase.root_path %>
      </div><!-- /.sidebar-nav -->
    </div><!-- /.span3 -->
    <div class="span9">
      <%= render :partial => '/layouts/lettershead', :locals => { :controller => "supplier_contacts", :action => "index" } %>
      <table class="table table-condensed table-striped shrinked">
        <thead>
          <tr>
            <th><%= t 'activerecord.attributes.supplier_contact.full_name' %></th>
            <th><%= t 'activerecord.attributes.supplier_contact.supplier' %></th>
            <th><%= t 'activerecord.attributes.supplier_contact.position' %></th>
            <th><%= t 'activerecord.attributes.supplier_contact.phone' %></th>
            <th><%= t 'activerecord.attributes.supplier_contact.cellular' %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @supplier_contacts.each do |w| %>
          <%= render :partial => 'layouts/ag2_purchase/contactinfo', :locals => { :contact => w, :title => t("activerecord.models.supplier_contact.one") + ' ' + w.supplier.name } %>
          <tr>
            <td><a data-toggle="modal" href="#contactinfo<%= w.id.to_s %>"><%= w.full_name %></a></td>
            <td><%= w.supplier.name %></td>
            <td><%= w.position unless w.position.blank? %></td>
            <td><%= w.phone unless w.phone.blank? %>
            <% if !w.extension.blank? %>
            (<%= w.extension %>)
            <% end %> </td>
            <td><%= w.cellular unless w.cellular.blank? %></td>
            <td><%= render :partial => '/layouts/crud/edit', :locals => { :model => SupplierContact, :path => edit_supplier_contact_path(w) } %>
            <%= render :partial => '/layouts/crud/delete', :locals => { :model => SupplierContact, :path => w, :msg => t("activerecord.models.supplier_contact.one"), :txt => w.full_name } %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= render :partial => '/layouts/pagination', :locals => { :ivar => @supplier_contacts } %>
    </div><!-- /.span9 -->
  </div><!-- /.row-fluid -->
</div><!-- /.container-fluid -->
