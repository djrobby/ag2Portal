  <th align="right"><%= t "activerecord.attributes.purchase_order_item.quantity" %></th>
  <th align="right"><%= t "activerecord.attributes.purchase_order_item.price" %></th>
  <th align="right"><%= t "activerecord.attributes.purchase_order_item.discount_pct" %></th>
