<table id="items-table" class="table table-condensed table-striped shrinked">
  <thead>
    <%= render 'items_header' %>
  </thead>
  <tbody>
    <%= f.simple_fields_for :purchase_order_items do |i| %>
    <tr class="fields">
      <td><%= i.label :product, "Uno" %></td>
      <td><%= i.input :description, label: false, input_html: { onkeyup: "caps(this)" } %></td>
      <td><%= i.input :quantity, label: false, as: :string, input_html: { value: (number_with_precision(i.object.quantity, precision: 4) if i.object.quantity), class: 'number-text-field' } %></td>
      <td><%= i.input :price, label: false, as: :string, input_html: { value: (number_with_precision(i.object.price, precision: 4) if i.object.price), class: 'number-text-field' } %></td>
      <td><%= i.input :discount_pct, label: false, as: :string, input_html: { value: (number_with_precision(i.object.discount_pct, precision: 2) if i.object.discount_pct), class: 'number-text-field' } %></td>
      <td><%= i.input :discount, label: false, as: :string, input_html: { value: (number_with_precision(i.object.discount, precision: 4) if i.object.discount), class: 'number-text-field' } %></td>
      <td><%= i.label :amount, label_html: { value: (number_to_currency(i.object.amount, precision: 4, locale: :es) if i.object.amount) } %></td>
      <% if current_page?(new_purchase_order_path) || current_page?(edit_purchase_order_path) %>
      <td><%= link_to_remove_fields('<i class="icon-trash"></i>'.html_safe, i, title: t('ag2_purchase.purchase_orders.delete_item')) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
