  </div>
  <div class="modal-body">
    <%= f.association :approver, collection: @users, input_html: { class: 'x-large-text-field fsel2 field', id: 'fnt-approver', data: { validation: "required", "validation-error-msg" => "#{e}" } }, label_html: { class: 'form-label' } %>
