<script>
  var _f = '';

  $(document).ready(function() {
    $('.wsel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      dropdownCssClass: 'shrinked',
      dropdownAutoWidth: true,
      containerCssClass: 'sub-select2-field'
    });
    $('.wdatepicker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    }).on('changeDate', function(e){
      $('.wdatepicker').datepicker('hide');
    });

    // Trigger to display totals at table foot
    $('#approvals-table').bind('totals', function(event) {
      // Sum necessary values from table rows
      var amount = 0;
      $('#approvals-table tr.fields:visible').each(function() {
        amount += parseFloat(right_number($(this).find('input.fnt-approved-amount').val(), 4));
      });
      amount = parseInt(right_number(amount.toString(), 4) * 10000);
      jQuery.getJSON('si_approval_totals/' + amount, function(data) {
        document.getElementById('foot-totala').innerHTML = data.total;
      });
    });
    // Update and display totals
    $('#approvals-table').trigger('totals');
    // Retrieves parent values
    _f = $(".fnt-approver").closest('form')[0];
  }); 

  jQuery(function($) {
    // when the .fnt-approved-amount field changes
    $(".fnt-approved-amount").change(function() {
      // can't approve more than current debt
      // preserve the current object
      var _this = (this);
      recalculate(_this);
      return false;
    });
    
    // Recalculate amounts & prices
    function recalculate(_this) {
      // make a POST call and replace the content
      var cost = $(_this).closest('tr').find('.fnt-costw').val();
      if (cost == "")
        cost = "0";
      var hours = $(_this).closest('tr').find('.fnt-hours').val();
      if (hours == "")
        hours = "0";
      // Right formatted for passing as REST parameter
      cost = parseInt(right_number(cost, 4) * 10000);
      hours = parseInt(right_number(hours, 4) * 10000);
      jQuery.getJSON('wo_update_costs_from_cost_or_hours/' + cost + '/' + hours, function(data) {
        $(_this).closest('tr').find('.fnt-costw').val(data.cost);
        $(_this).closest('tr').find('.fnt-hours').val(data.hours);
        $(_this).closest('tr').find('.fnt-costsw').val(data.costs);
        // Update and display totals
        $('#approvals-table').trigger('totals');
      });
    }

    /*
     * Very special function!
     * This one re-calculate table totals after delete an item
     * When the .icon-trash clicked
     * Replace behavior of link_to_remove_fields
     * (the same was done in nested_si.js)
     */
    $(".icon-trash").click(function() {
      remove_fields(this);
      // Update and display totals
      $('#approvals-table').trigger('totals');
    });
  });
</script>

<table id="approvals-table" class="table table-condensed table-striped shrinked fixed">
  <!-- approver -->
  <col width="60%" />
  <!-- approval_date -->
  <col width="11%" />
  <!-- approval_amount -->
  <col width="12%" />
  <!-- remarks -->
  <col width="12%" />
  <!-- button -->
  <col width="5%" />
  <thead>
    <%= render 'approvals_header' %>
  </thead>
  <tfoot>
    <%= render 'approvals_table_footer', f: f %>
  </tfoot>
  <tbody>
    <%= f.simple_fields_for :supplier_invoice_approvals, defaults: { input_html: { class: 'sub-form' } } do |i| %>
    <tr class="fields">
      <td><%= i.association :approver, label: false, wrapper: false, collection: @users, input_html: { class: 'wsel2 fnt-approver' } %></td>
      <td><%= i.input :approval_date, label: false, wrapper: false, as: :string, start_year: Time.now.year - 100, end_year: Time.now.year + 100, input_html: { value: (f.object.approval_date.strftime("%d/%m/%Y") if f.object.approval_date), class: 'sub-alfanumeric-text-field wdatepicker fnt-approval-date' } %></td>
      <td><%= i.input :approved_amount, label: false, wrapper: false, as: :string, input_html: { value: (number_with_precision(i.object.cost, precision: 4) if i.object.cost), class: 'sub-number-text-field fnt-approved-amount' } %></td>
      <td><%= i.input :remarks, label: false, wrapper: false, input_html: { class: 'sub-alfanumeric-text-field fnt-remarks', maxlength: 40 } %></td>
      <% if @breadcrumb == 'create' || @breadcrumb == 'update' %>
      <td><%= link_to_remove_fields('<i class="icon-trash"></i>'.html_safe, i) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
