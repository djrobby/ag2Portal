<script>
  var _f = '';

  $(document).ready(function() {
    // Retrieves parent values
    _f = $("#fnt-notification").closest('form')[0];
    // Set focus
    $(".modal").on('shown', function() {
      $(this).find(".form-label:first").focus();
    });
  });
</script>

<div id="new-account-fields" class="modal hide fade" data-backdrop="static">
  <% e = t(:item_error) %>
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3><%= t("ag2_purchase.suppliers.add_account") %></h3>
    <span class="shrinked"><%= I18n.t(:mandatory_subtitle) %></span>
  </div>
  <div class="modal-body">
    <%= f.association :bank_account_class, collection: @classes, input_html: { class: 'x-large-text-field fsel2 field', id: 'fnt-class', data: { validation: "required", "validation-error-msg" => "#{e}" } }, label_html: { class: 'form-label' } %>
    <%= f.association :country, collection: @countries, input_html: { class: 'x-large-text-field fsel2 field', id: 'fnt-country', data: { validation: "required", "validation-error-msg" => "#{e}" } }, label_html: { class: 'form-label' } %>
    <%= f.input :iban_dc, input_html: { onkeyup: "caps(this)", class: 'x-large-text-field field', maxlength: 2, id: 'fnt-iban-dc', data: { validation: "required", "validation-error-msg" => "#{e}" }, onkeyup: "caps(this)" }, label_html: { class: 'form-label' } %>
    <%= f.association :bank, collection: @banks, input_html: { class: 'x-large-text-field fsel2 field', id: 'fnt-bank', data: { validation: "required", "validation-error-msg" => "#{e}" } }, label_html: { class: 'form-label' } %>
    <%= f.association :bank_office, collection: @offices, input_html: { class: 'x-large-text-field fsel2 field', id: 'fnt-office', data: { validation: "required", "validation-error-msg" => "#{e}" } }, label_html: { class: 'form-label' } %>
    <%= f.input :ccc_dc, input_html: { onkeyup: "caps(this)", class: 'x-large-text-field field', maxlength: 2, id: 'fnt-ccc-dc', data: { validation: "required", "validation-error-msg" => "#{e}" }, onkeyup: "caps(this)" }, label_html: { class: 'form-label' } %>
    <%= f.input :account_no, input_html: { onkeyup: "caps(this)", class: 'x-large-text-field field', maxlength: 10, id: 'fnt-account', data: { validation: "required", "validation-error-msg" => "#{e}" }, onkeyup: "caps(this)" }, label_html: { class: 'form-label' } %>
    <%= f.input :holder_fiscal_id, input_html: { onkeyup: "caps(this)", class: 'x-large-text-field field', id: 'fnt-fiscal-id', data: { validation: "required", "validation-error-msg" => "#{e}" }, onkeyup: "caps(this)" }, label_html: { class: 'form-label' } %>
    <%= f.input :holder_name, input_html: { onkeyup: "caps(this)", class: 'x-large-text-field field', maxlength: 10, id: 'fnt-name', data: { validation: "required", "validation-error-msg" => "#{e}" }, onkeyup: "caps(this)" }, label_html: { class: 'form-label' } %>
    <%= f.input :starting_at, start_year: Time.now.year - 100, end_year: Time.now.year + 100, as: :string, input_html: { value: (f.object.starting_at.strftime("%d/%m/%Y") if f.object.starting_at), class: 'mid-text-field idatepicker field', id: 'fnt-starting-at' }, label_html: { class: 'form-label' } %>
    <%= f.input :ending_at, start_year: Time.now.year - 100, end_year: Time.now.year + 100, as: :string, input_html: { value: (f.object.ending_at.strftime("%d/%m/%Y") if f.object.ending_at), class: 'mid-text-field idatepicker field', id: 'fnt-ending-at' }, label_html: { class: 'form-label' } %>
    <%= f.input :_destroy, as: :hidden, input_html: { class: 'field' } %>
  </div>
  <div class="modal-footer">
    <span class="left-floated" style="vertical-align: bottom"><%= t("ag2_purchase.suppliers.add_account_to", var: @supplier.full_name) unless @supplier.full_name.blank? %></span>
    <button id="addAccountButton" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true"><%= t('ag2_purchase.suppliers.btn_add_account') %></button>
    <button id="cancelAccountButton" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true"><%= t :close_button %></button>
  </div>
</div>

<script type="text/javascript">
  sel2NoMatch = '<%= t("select2.no_matches") %>';
  su_accountFieldsUI.init(sel2NoMatch);
</script>