<script>
  var text_field_color;

  $(document).ready(function() {
    /*
    $('.date_picker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    });
    */
    text_field_color = $("#supplier_name").css('color')
  });
  
  jQuery(function($) {
    // when the #supplier_town_id field changes
    $("#supplier_town_id").change(function() {
      // make a POST call and replace the content
      var supplier = $('select#supplier_town_id :selected').val();
      if (supplier == "")
        supplier = "0";
      jQuery.getJSON('update_province_textfield_from_town/' + supplier, function(data) {
        $("#supplier_province_id").val(data.id);
      })
      return false;
    });

    // when the #supplier_zipcode_id field changes
    $("#supplier_zipcode_id").change(function() {
      // make a POST call and replace the content
      var supplier = $('select#supplier_zipcode_id :selected').val();
      if (supplier == "")
        supplier = "0";
      jQuery.getJSON('update_province_textfield_from_zipcode/' + supplier, function(data) {
        $("#supplier_town_id").val(data.town_id);
        $("#supplier_province_id").val(data.province_id);
      })
      return false;
    });

    // when #generate_code_btn is clicked
    $("#generate_code_btn").click(function() {
      // make a POST call and replace the content
      var supplier = $('#worker_last_name').val() + '$' + $('#worker_first_name').val();
      if ((supplier == "") || (supplier == "$"))
        supplier = "LL NN$FI";
      jQuery.getJSON('update_code_textfield_from_name/' + supplier, function(data) {
        $("#supplier_supplier_code").val(data.code);
        if ($("#supplier_supplier_code").val() == "$err")
          $("#supplier_supplier_code").css('color', 'red');
        else
          $("#supplier_supplier_code").css('color', text_field_color);
      })
      return false;
    });

    // when the #supplier_supplier_code field changes
    $("#supplier_supplier_code").change(function() {
      // replace the color
      $("#supplier_supplier_code").css('color', text_field_color);
    });
  })
</script>

<%= simple_form_for @supplier, :html => {:class => 'form-vertical well' } do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<%= f.input :name, :required => true, :autofocus => true, :input_html => { :class => 'x-large-text-field' }, :label_html => { :class => 'form-label' } %>
<div>
  <label class="multi-field-label-two"> <%= f.input :supplier_code, :input_html => { :class => 'mid-text-field' }, :label_html => { :class => 'form-label' } %> </label>
  <label class="multi-field-label-two"> <%= f.input :fiscal_id, :input_html => { :class => 'mid-text-field' }, :label_html => { :class => 'form-label' } %> </label>
</div>
<table class="form-table">
  <tbody>
    <tr class="form-tr">
      <td class="form-td-three left-winged"> <%= f.button :submit, :class => 'btn-primary' %> </td>
      <td class="form-td-three right-winged"><a href="#" id="generate_code_btn" class="btn btn-warning"><%=t 'ag2_purchase.suppliers.generate_code_btn' %></a></td>
    </tr>
  </tbody>
</table>
<% end %>
