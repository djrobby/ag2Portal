<script>
  $(document).ready(function() {
    $('select.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      allowClear: true
    });
  });

  jQuery(function($) {
    // when the #vehicle_office_id field changes
    $("#vehicle_office_id").change(function() {
      // make a POST call and replace the content
      var tool = $('select#vehicle_office_id :selected').val();
      if (tool == "")
        tool = "0";
      jQuery.getJSON('ve_update_company_textfield_from_office/' + tool, function(data) {
        $("#vehicle_company_id").val(data.id);
      });
      return false;
    });

    // when the #vehicle_organization_id field changes
    $("#vehicle_organization_id").change(function() {
      // make a POST call and replace the content
      var tool = $('select#vehicle_organization_id :selected').val();
      if (tool == "")
        tool = "0";
      jQuery.getJSON('ve_update_company_and_office_textfields_from_organization/' + tool, function(data) {
        var c = data.companies;
        var o = data.offices;
        var p = data.products
        // Companies
        $("#vehicle_company_id").html("");
        $("#vehicle_company_id").val("");
        $("#vehicle_company_id").append($('<option></option>').val("").html(""));
        if (!c.length) {
          $.each(data, function(id, option) {
            if (id == 'companies' && option != "") {
              $("#vehicle_company_id").append($('<option></option>').val(option.id).html(option.name));
            }
          });
        } else {
          $.each(c, function(id, option) {
            $("#vehicle_company_id").append($('<option></option>').val(option.id).html(option.name));
          });
        }
        // Offices
        $("#vehicle_office_id").html("");
        $("#vehicle_office_id").val("");
        $("#vehicle_office_id").append($('<option></option>').val("").html(""));
        if (!o.length) {
          $.each(data, function(id, option) {
            if (id == 'offices' && option != "") {
              $("#vehicle_office_id").append($('<option></option>').val(option[0]).html(option[1] + " (" + option[2] + ")"));
            }
          });
        } else {
          $.each(o, function(id, option) {
            $("#vehicle_office_id").append($('<option></option>').val(option[0]).html(option[1] + " (" + option[2] + ")"));
          });
        }
        // Products
        $("#vehicle_product_id").html("");
        $("#vehicle_product_id").select2("val", "");
        $("#vehicle_product_id").append($('<option></option>').val("").html(""));
        if (!p.length) {
          $.each(data, function(id, option) {
            if (id == 'products' && option != "") {
              $("#vehicle_product_id").append($('<option></option>').val(option.id).html(option.product_code.substring(0,4) + "-" + option.product_code.substring(4,10) + " " + option.main_description));
            }
          });
        } else {
          $.each(p, function(id, option) {
            $("#vehicle_product_id").append($('<option></option>').val(option.id).html(option.product_code.substring(0,4) + "-" + option.product_code.substring(4,10) + " " + option.main_description));
          });
        }
      });
      if (tool == "0") {
        $("#vehicle_company_id").val(0);
        $("#vehicle_office_id").val(0);
        $("#vehicle_product_id").val(0);
      }
      return false;
    });

    // when the #vehicle_product_id field changes
    $("#vehicle_product_id").change(function() {
      // make a POST call and replace the content
      var tool = $('select#vehicle_product_id :selected').val();
      if (tool == "")
        tool = "0";
      jQuery.getJSON('ve_update_name_textfield_from_product/' + tool, function(data) {
        $("#vehicle_name").val(data.description);
        $("#vehicle_cost").val(data.cost);
        $("#vehicle_brand").val(data.manufacturer);
      });
      return false;
    });
  });  
</script>

<%= simple_form_for @vehicle, :html => {:class => 'form-vertical well' } do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<% if session[:organization] != '0' %>
<%= f.association :organization, autofocus: true, collection: Organization.where("id = ?", "#{session[:organization]}").all, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' }, include_blank: false %>
<% elsif current_user.organizations.count > 0 %>
<%= f.association :organization, autofocus: true, collection: current_user.organizations.order('name'), input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' }, include_blank: false %>
<% else %>
<%= f.association :organization, autofocus: true, collection: Organization.order('name'), input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %>
<% end %>
<div>
  <label class="multi-field-label-two">
    <% if session[:office] != '0' %>
    <%= f.association :office, collection: Office.where("id = ?", "#{session[:office]}").all, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' }, include_blank: false %>
    <% elsif current_user.offices.count > 0 %>
    <%= f.association :office, collection: current_user.offices.order('name'), input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' }, include_blank: false %>
    <% else %>
    <%= f.association :office, collection: @offices, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %>
    <% end %>
  </label>
  <label class="multi-field-label-two">
    <% if session[:company] != '0' %>
    <%= f.association :company, collection: Company.where("id = ?", "#{session[:company]}").all, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' }, include_blank: false %>
    <% elsif current_user.companies.count > 0 %>
    <%= f.association :company, collection: current_user.companies.order('name'), input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' }, include_blank: false %>
    <% else %>
    <%= f.association :company, collection: @companies, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %>
    <% end %>
  </label>
</div>
<div>
  <label class="multi-field-label-two"> <%= f.association :product, collection: @products, input_html: { class: 'x-large-text-field sel2' }, label_html: { class: 'form-label' } %> </label>
  <label class="multi-field-label-two"> <%= f.input :registration, input_html: { onkeyup: "caps(this)", class: 'mid-text-field' }, label_html: { class: 'form-label' } %> </label>
</div>
<div>
  <label class="multi-field-label-two"> <%= f.input :name, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %> </label>
  <label class="multi-field-label-two"> <%= f.input :cost, as: :string, input_html: { value: (number_with_precision(f.object.cost, precision: 4) if f.object.cost), class: 'large-text-field number-text-field' }, label_html: { class: 'form-label' } %> </label>
</div>
<div>
  <label class="multi-field-label-two"> <%= f.input :brand, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %> </label>
  <label class="multi-field-label-two"> <%= f.input :model, input_html: { class: 'x-large-text-field' }, label_html: { class: 'form-label' } %> </label>
</div>
<%= f.button :submit, :class => 'btn-primary', :id => 'submit_btn' %>
<% end %>
