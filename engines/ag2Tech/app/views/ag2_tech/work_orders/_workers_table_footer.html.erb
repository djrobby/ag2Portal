<tr>
  <td></td>
  <td align="right"><%= t :"activerecord.attributes.work_order.bonus" %> | <%= t :"activerecord.attributes.work_order.taxable" %> | <%= t :"activerecord.attributes.work_order.taxes" %></td>
  <td></td>
  <td></td>
