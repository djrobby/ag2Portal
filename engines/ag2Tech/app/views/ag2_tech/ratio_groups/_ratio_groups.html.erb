<script>
  $(document).ready(function() {
    $("#div_table th a, #div_table #pages a").on("click", function() {
      $.getScript(this.href);
      return false;
    });
  }); 
</script>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= sortable "code", t('activerecord.attributes.ratio_group.code') %></th>
      <th><%= sortable "name", t('activerecord.attributes.ratio_group.name') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ratio_groups.each do |group| %>
    <tr>
      <td><%= link_to group.code, group %></td>
      <td><%= group.name %></td>
      <td><%= render :partial => '/layouts/crud/edit', :locals => { :model => RatioGroup, :path => edit_ratio_group_path(group) } %>
      <%= render :partial => '/layouts/crud/delete', :locals => { :model => RatioGroup, :path => group, :msg => t("activerecord.models.ratio_group.one"), :txt => group.full_name } %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= render :partial => '/layouts/pagination', :locals => { :ivar => @ratio_groups } %>
<%= render :partial => '/layouts/crud/new', :locals => { :model => RatioGroup, :path => new_ratio_group_path, :txt => t("ag2_tech.ratio_groups.index.btn_new") } %>

<%= link_to I18n.t("ag2_tech.ratio_groups.index.go_to"), ratios_path %> |
<%= link_to t("ag2_tech.ratio_groups.index.back_to_root"), ag2_tech.root_path %>
