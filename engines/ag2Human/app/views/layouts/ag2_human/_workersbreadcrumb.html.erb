<% content_for :title, "aGestiona2 | ag2Workers" %>
<% content_for :icon, "/assets/icon/ag2Workers.png" %>
<% content_for :alt, "ag2Workers" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_human.root_path %>">ag2Human</a><span class="divider">></span>
  </li>
  <% if @workers %>
  <li>
    ag2Workers
  </li>
  <% end %>
  <% if @worker %>
  <li>
    <a href="<%= workers_path %>">ag2Workers</a><span class="divider">></span>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%= @worker.worker_code %>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%= t :"breadcrumb.new" %>
  </li>
  <% end %>
  <!-- Records navigator -->
  <% if @breadcrumb == 'read' %>
  <li><span class="divider"></span></li>
  <li>
    <%= link_to @worker.to_first, :class => 'btn btn-mini' do %> <i class="icon-fast-backward"></i> <% end %>
  </li>
  <li>
    <%= link_to @worker.to_prev, :class => 'btn btn-mini' do %> <i class="icon-backward"></i> <% end %>
  </li>
  <li>
    <%= link_to @worker.to_next, :class => 'btn btn-mini' do %> <i class="icon-forward"></i> <% end %>
  </li>
  <li>
    <%= link_to @worker.to_last, :class => 'btn btn-mini' do %> <i class="icon-fast-forward"></i> <% end %>
  </li>
  <% end %>
  <% end %>
  <!-- Close -->
  <a class="close" href="<%= ag2_human.root_path %>">&#215;</a>
</ul>
