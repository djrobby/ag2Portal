<% content_for :title, "aGestiona2 | ag2Workers" %>
<% content_for :icon, "/assets/icon/ag2Workers.png" %>
<% content_for :alt, "ag2Workers" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_human.root_path %>">ag2Human</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_human.workers_path %>"><%=t "ag2_human.breadcrumb.workers.items"%></a><span class="divider">></span>
  </li>
  <% if @worker_items %>
  <li>
    <%= t "ag2_human.breadcrumb.worker_items.items" %>
  </li>
  <% end %>
  <% if @worker_item %>
  <li>
    <% if @worker %>
    <%= link_to @worker.worker_code, @worker %><span class="divider">></span>
    <% else %>
    <%= link_to t("ag2_human.breadcrumb.worker_items.items"), worker_items_path %><span class="divider">></span>
    <% end %>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <li>
  <%= t "ag2_human.breadcrumb.worker_items.item" %>
  </li>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <% if @worker %>
  <li>
    <%= t "ag2_human.breadcrumb.worker_items.new" %>
  </li>
  <% else %>
  <li>
    <%= t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <% end %>
  <!-- Close -->
  <a class="close" href="<%= ag2_human.workers_path %>">&#215;</a>
</ul>
