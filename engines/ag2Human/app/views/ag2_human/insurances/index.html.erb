<%= render '/layouts/ag2_human/insurancesbreadcrumb' %>

<h3><%=t '.title' %></h3>
<div class="span6">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th><%= sortable "name", t('activerecord.attributes.insurance.name') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @insurances.each do |t| %>
      <tr>
        <td><%= link_to t.name.titleize, t %></td>
        <td><%= render :partial => '/layouts/crud/edit', :locals => { :model => Insurance, :path => edit_insurance_path(t) } %>
        <%= render :partial => '/layouts/crud/delete', :locals => { :model => Insurance, :path => t, :msg => I18n.t("activerecord.models.insurance.one"), :txt => t.name.titleize } %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= render :partial => '/layouts/pagination', :locals => { :ivar => @insurances } %>
  <%= render :partial => '/layouts/crud/new', :locals => { :model => Insurance, :path => new_insurance_path, :txt => t(".btn_new") } %>
  <%= link_to t(".go_to_workers"), workers_path %> |
  <%= link_to t(".back_to_root"), ag2_human.root_path %>
</div>
