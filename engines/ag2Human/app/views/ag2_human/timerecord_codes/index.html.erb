<%= render '/layouts/ag2_human/trecordcodesbreadcrumb' %>

<h3>TimeRecord Codes</h3>
<div class="span6">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @timerecord_codes.each do |t| %>
      <tr>
        <td><%= link_to t.name.titleize, t %></td>
        <td><%= link_to edit_timerecord_code_path(t), :class => 'btn btn-mini' do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(t, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New TimeRecord Code', new_timerecord_code_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to 'Back to ag2TimeRecord', ag2_human.time_record_path %>
</div>
