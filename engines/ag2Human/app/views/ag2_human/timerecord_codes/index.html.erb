<%= render '/layouts/ag2_human/trecordcodesbreadcrumb' %>

<h3><%=t '.title' %></h3>
<div class="span6">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th><%=t :"ag2_human.timerecord_codes.col_name" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @timerecord_codes.each do |t| %>
      <tr>
        <td><%= link_to t.name.titleize, t %></td>
        <td><%= link_to edit_timerecord_code_path(t), :class => 'btn btn-mini' do %> <i class="icon-edit"></i> <% end %>
        <%= link_to(t, :data => { :confirm => I18n.t("are_you_sure") }, :method => :delete, :class => 'btn btn-mini') do %> <i class="icon-trash"></i> <% end %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to I18n.t("btn_new", :scope => :"ag2_human.timerecord_codes.index"), new_timerecord_code_path, :class => 'btn btn-primary' %>
  <br />
  <br />
  <%= link_to I18n.t("back_to_root", :scope => :"ag2_human.timerecord_codes.index"), ag2_human.ag2_timerecord_path %>
</div>
