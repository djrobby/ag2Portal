<%= render '/layouts/ag2_human/sconceptsbreadcrumb' %>

<h3><%=t '.title' %></h3>
<table class="table">
  <tbody>
    <tr>
      <td>Id:</td>
      <td><%= @salary_concept.id %></td>
      <td><%= t :"activerecord.attributes.salary_concept.nomina_id" %>:</td>
      <td><%= @salary_concept.nomina_id unless @salary_concept.nomina_id.blank? %></td>
    </tr>
    <tr>
      <td><%=t 'activerecord.attributes.salary_concept.name' %>:</td>
      <td><%= @salary_concept.name %></td>
      <td></td>
      <td></td>
    </tr>
    <%= render :partial => '/layouts/createdat_updatedat', :locals => { :ivar => @salary_concept } %>
    <%= render :partial => '/layouts/createdby_updatedby', :locals => { :ivar => @salary_concept } %>
  </tbody>
</table>

<%= render partial: '/layouts/crud/update_delete_new', locals:
{ model: SalaryConcept, update_path: edit_salary_concept_path(@salary_concept), update_txt: t('.btn_edit'),
delete_path: @salary_concept, delete_txt: t('.btn_delete'), msg: t("activerecord.models.salary_concept.one"), txt: @salary_concept.name,
new_path: new_salary_concept_path, new_txt: t('ag2_human.salary_concepts.index.btn_new') } %>

<%= link_to t('ag2_human.salary_concepts.back_to_main_page'), salary_concepts_path %>
