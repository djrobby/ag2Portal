<%= render '/layouts/ag2_human/dtypesbreadcrumb' %>

<h3><%=t '.title' %></h3>
<table class="table">
  <tbody>
    <tr>
      <td>Id:</td>
      <td><%= @degree_type.id %></td>
      <td><%=t 'activerecord.attributes.degree_type.dt_code' %>:</td>
      <td><%= @degree_type.dt_code unless @degree_type.dt_code.nil? %></td>
    </tr>
    <tr>
      <td><%=t 'activerecord.attributes.degree_type.name' %>:</td>
      <td><%= @degree_type.name %></td>
      <td></td>
      <td></td>
    </tr>
    <%= render :partial => '/layouts/createdat_updatedat', :locals => { :ivar => @degree_type } %>
  </tbody>
</table>

<%= link_to I18n.t('ag2_human.degree_types.show.btn_edit'), edit_degree_type_path(@degree_type), :class => 'btn btn-primary' %>
<br />
<br />

<% if (@workers.count > 0) %>
<h4><%=t '.subtable_title' %></h4>
<table class="table table-condensed table-striped">
  <thead>
    <%= render '/layouts/ag2_human/workersheader' %>
  </thead>
  <tbody>
    <% session[:return_to] = I18n.t('ag2_human.degree_types.show.return_to') %>
    <% session[:return_to_url] = "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>
    <%= render :partial => '/layouts/ag2_human/workers', :locals => { :workers => @workers } %>
  </tbody>
</table>
<% end %>

<%= link_to I18n.t('ag2_human.degree_types.back_to_main_page'), degree_types_path %>
