<%= render '/layouts/ag2_human/pgroupsbreadcrumb' %>

<h3>Professional group</h3>
<table class="table">
  <tbody>
    <tr>
      <td>Id:</td>
      <td><%= @professional_group.id %></td>
      <td>Code:</td>
      <td><%= @professional_group.pg_code unless @professional_group.pg_code.nil? %></td>
    </tr>
    <tr>
      <td>Name:</td>
      <td><%= @professional_group.name %></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit Professional group', edit_professional_group_path(@professional_group), :class => 'btn btn-primary' %>
<br />
<br />

<% if (@workers.count > 0) %>
<h4>Professional group Workers</h4>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Full Name</th>
      <th>Company</th>
      <th>Office</th>
    </tr>
  </thead>
  <tbody>
    <% @workers.each do |w| %>
    <tr>
      <td><%= link_to w.worker_code, w %></td>
      <td><%= w.last_name %>, <%= w.first_name %></td>
      <td><%= Company.find(w.company).name unless w.company.nil? %></td>
      <td><%= Office.find(w.office).name unless w.office.nil? %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Back to Professional groups', professional_groups_path %>
