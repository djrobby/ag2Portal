<%= render '/layouts/ag2_human/cagreementsbreadcrumb' %>

<h3><%=t '.title' %></h3>
<table class="table">
  <tbody>
    <tr>
      <td>Id:</td>
      <td><%= @collective_agreement.id %></td>
      <td><%=t 'activerecord.attributes.collective_agreement.ca_code' %>:</td>
      <td><%= @collective_agreement.ca_code unless @collective_agreement.ca_code.nil? %></td>
    </tr>
    <tr>
      <td><%=t 'activerecord.attributes.collective_agreement.name' %>:</td>
      <td><%= @collective_agreement.name %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><%=t :created_at %>:</td>
      <td><%= @collective_agreement.created_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %></td>
      <td><%=t :updated_at %>:</td>
      <td><%= @collective_agreement.updated_at.utc.getlocal.strftime("%d/%m/%Y %H:%M:%S") %></td>
    </tr>
  </tbody>
</table>

<%= link_to I18n.t('ag2_human.collective_agreements.show.btn_edit'), edit_collective_agreement_path(@collective_agreement), :class => 'btn btn-primary' %>
<br />
<br />

<% if (@workers.count > 0) %>
<h4><%=t '.subtable_title' %></h4>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%=t :"activerecord.attributes.worker.worker_code" %></th>
      <th><%=t :"activerecord.attributes.worker.full_name" %></th>
      <th><%=t :"activerecord.attributes.worker.company" %></th>
      <th><%=t :"activerecord.attributes.worker.office" %></th>
    </tr>
  </thead>
  <tbody>
    <% session[:return_to] = I18n.t('ag2_human.collective_agreements.show.return_to') %>
    <% session[:return_to_url] = "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>
    <% @workers.each do |w| %>
    <tr>
      <td><%= link_to w.worker_code, w %></td>
      <td><%= w.last_name %>, <%= w.first_name %></td>
      <td><%= w.company.name unless w.company.nil? %></td>
      <td><%= w.office.name unless w.office.nil? %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to I18n.t('ag2_human.collective_agreements.back_to_main_page'), collective_agreements_path %>
