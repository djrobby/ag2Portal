<script>
  $(document).ready(function() {
    $('.date_picker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    });
  });  
</script>

<%= simple_form_for @time_record, :html => {:class => 'form-vertical well' } do |f| %>
<%= f.error_notification %>
<%= display_base_errors resource %>
<%= f.association :worker, :autofocus => true, collection: Worker.order('last_name, first_name').all, :input_html => { :class => 'x-large-text-field' }, :label_html => { :class => 'form-label' } %>
<div>
  <label class="multi-field-label-two"> <%= f.input :timerecord_date, :label => 'Date', :start_year => Time.now.year - 100, :end_year => Time.now.year + 100, :as => :string, :input_html => { :value => (f.object.timerecord_date.strftime("%d/%m/%Y") if f.object.timerecord_date), :class => 'mid-text-field date_picker' }, :label_html => { :class => 'form-label' } %> </label>
  <label class="multi-field-label-two"> <%= f.input :timerecord_time, :label => 'Time', :input_html => { :value => (f.object.timerecord_time.strftime("%H:%M") if f.object.timerecord_time), :class => 'mid-text-field' }, :label_html => { :class => 'form-label' } %> </label>
</div>
<div>
  <label class="multi-field-label-two"> <%= f.association :timerecord_type, :label => 'Type', collection: TimerecordType.all(order: 'id'), :as => :radio_buttons, :input_html => { :class => 'mid-text-field' }, :label_html => { :class => 'form-label' } %> </label>
  <label class="multi-field-label-two"> <%= f.association :timerecord_code, :label => 'Code', collection: TimerecordCode.all(order: 'name'), :input_html => { :class => 'x-large-text-field' }, :label_html => { :class => 'form-label' } %> </label>
</div>
<%= f.button :submit, :class => 'btn-primary' %>
<% end %>
