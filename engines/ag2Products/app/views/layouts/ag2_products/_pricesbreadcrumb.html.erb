<% content_for :title, "aGestiona2 | ag2Products | ag2Prices" %>
<% content_for :icon, "/assets/icon/ag2Products.png" %>
<% content_for :alt, "ag2Prices" %>

<!-- Breadcrumb -->
<ul class="breadcrumb">
  <li>
    <a href="<%= main_app.root_path %>"><i class="icon-home"></i></a><span class="divider">></span>
  </li>
  <% if !session[:return_to_prod].nil? && !@product.nil? %>
  <li>
    <a href="<%= ag2_products.root_path %>">ag2Logistics</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_products.products_path %>">ag2Products</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= session[:return_to_prod_url] %>"><%= @product.full_code %></a><span class="divider">></span>
  </li>
  <% end %>
  <% if !session[:return_to_prod].nil? && !@supplier.nil? %>
  <li>
    <a href="<%= ag2_purchase.root_path %>">ag2Purchase</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= ag2_purchase.suppliers_path %>">ag2Suppliers</a><span class="divider">></span>
  </li>
  <li>
    <a href="<%= session[:return_to_prod_url] %>"><%= @supplier.full_code %></a><span class="divider">></span>
  </li>
  <% end %>
  
  <% if @purchase_prices %>
  <li>
    <%=t :"ag2_products.breadcrumb.prices.items" %>
  </li>
  <% end %>
  <% if @purchase_price %>
  <li>
    <% if !@product.nil? %>
    <a href="<%= purchase_prices_path(product: @product) %>"><%=t :"ag2_products.breadcrumb.prices.items" %></a><span class="divider">></span>
    <% elsif !@supplier.nil? %>
    <a href="<%= purchase_prices_path(supplier: @supplier) %>"><%=t :"ag2_products.breadcrumb.prices.items" %></a><span class="divider">></span>
    <% else %>
    <a href="<%= purchase_prices_path %>"><%=t :"ag2_products.breadcrumb.prices.items" %></a><span class="divider">></span>
    <% end %>
  </li>
  <% if @breadcrumb == 'read' || @breadcrumb == 'update' %>
  <%=t :"ag2_products.breadcrumb.prices.item" %>
  <% end %>
  <% if @breadcrumb == 'create' %>
  <li>
    <%= t :"breadcrumb.new" %>
  </li>
  <% end %>
  <% end %>
  <!-- Close -->
  <a class="close" href="<%= ag2_products.root_path %>">&#215;</a>
</ul>
