<script>
  var changing = false;

  $(document).ready(function() {
    $('.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      dropdownCssClass: 'shrinked',
      dropdownAutoWidth: true,
      allowClear: true
    });
    $('.date_picker').datepicker({
      format : 'dd/mm/yyyy',
      weekStart : 1
    }).on('changeDate', function(e){
      $('.date_picker').datepicker('hide');
    });
  }); 

  // $(document).ajaxStart(function() {
  //   // show loader on start
  //   if (changing == false) {
  //     $("#div_table").html("");
  //     $("#loader").show();
  //   }
  // });
  $(document).ajaxSuccess(function() {
    // hide loader on success
    $("#loader").hide();
  });

  $(window).bind("load", function() {
    $("#Store").select2("val", "<%= params[:Store] %>");
  });

  jQuery(function($) {
    // when .icon-refresh-link is clicked
    $(".icon-refresh-link").click(function(event) {
      // event.preventDefault();
      $( "#product_receipts_deliveries_form").submit();
    });

    // when #submit_btn is clicked
    $("#submit_btn").click(function() {
      // show loader
      $("#div_table").html("");
      $("#loader").show();
    });

    // when the #removeFilter button clicked
    $("#removeFilter").click(function() {
      $("#Store").select2("val", "");
      $("#from").val("");
      $("#to").val("");
      // no AJAX
      //_thisForm.submit();
      // AJAX
      $("#submit_btn").trigger("click");
    });
  });
</script>

<%= render '/layouts/ag2_products/receipts_deliveries_productbreadcrumb' %>

<table class="header-with-image">
  <tr>
    <td class="header-title">
      <h3><%= t '.title' %></h3>
    </td>
    <td class="header-image">
      <span class="highlighted bolded"><%= @product.full_name %></span>
    </td>
  </tr>
</table>

<!-- Link to return here -->
<% session[:return_to_prod] = I18n.t('ag2_products.products.receipts_deliveries.return_to') %>
<% session[:return_to_prod_url] = "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>

<div class="container-fluid">
  <div class="row-fluid">

    <div class="span3">
      <div class="well sidebar-nav">
        <!-- Refresh -->
        <%= link_to "javascript:void(0)", title: I18n.t(:refresh), class: "icon-refresh-link", :remote => true do %> <i class="icon-refresh"></i> <% end %>
        <!-- Search form -->
        <%= form_tag "receipts_deliveries", :id => 'product_receipts_deliveries_form', :method => 'get', :remote => true do %>
        <!-- Id -->
        <%= hidden_field_tag "id", params[:id] %>
        <!-- Store -->
        <%= label_tag 'label_store', t("activerecord.attributes.stock.store"), :class => 'form-label' %>
        <%= select_tag "Store", options_from_collection_for_select(@stores, "id", "name"), :prompt => "", :class => 'x-large-text-field shrinked sel2' %>
        <!-- Dates -->
        <%= label_tag 'label_from', t("control_tracking.label_from"), :class => 'form-label-under-sel2' %>
        <%= text_field_tag "from", params[:from], :class =>  'x-large-text-field-text-field date_picker' %>
        <%= label_tag 'label_to', t("control_tracking.label_to"), :class => 'form-label' %>
        <%= text_field_tag "to", params[:to], :class =>  'x-large-text-field-text-field date_picker' %>
        <!-- Submit -->
        <%= submit_tag I18n.t(:apply_filter_button), :class => 'btn btn-primary', :id => 'submit_btn' %>
        <!-- Remove filter -->
        <button id="removeFilter" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true"><%= t :clear_filter_button %></button>
        <% end %>
        <!-- Back -->
        <%= link_to t("ag2_products.products.show.return_to"), @product %>
      </div><!-- /.sidebar-nav -->
    </div><!-- /.span3 -->

    <div class="span9">
      <div id="loader"></div>
      <div id="div_table">
        <%= render 'receipts_deliveries' %>
      </div><!-- /#div_table -->
    </div><!-- /.span9 -->
  </div><!-- /.row-fluid -->
</div><!-- /.container-fluid -->
