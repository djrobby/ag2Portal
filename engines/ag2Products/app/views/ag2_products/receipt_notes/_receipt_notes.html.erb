<script>
  $(document).ready(function() {
    $("#div_table th a, #div_table #pages a").on("click", function() {
      $.getScript(this.href);
      return false;
    });
  }); 
</script>

<table class="table table-condensed table-striped shrinked">
  <thead>
    <tr>
      <th>Id</th>
      <th><%= t 'activerecord.attributes.receipt_note.receipt_no' %></th>
      <th align="center"><%= t 'activerecord.attributes.receipt_note.receipt_date' %></th>
      <th><%= t 'activerecord.attributes.receipt_note.supplier' %></th>
      <th><%= t 'activerecord.attributes.receipt_note.project' %></th>
      <th align="right"><%= t 'activerecord.attributes.receipt_note.total' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @receipt_notes.each do |note| %>
    <tr>
      <td><%= note.id %></td>
      <td><%= link_to note.receipt_no, note %></td>
      <td align="center"><%= note.receipt_date.strftime("%d/%m/%Y") unless note.receipt_date.blank? %></td>
      <td><%= note.supplier.full_name unless note.supplier.blank? %></td>
      <td><%= note.project.full_name unless note.project.blank? %></td>
      <td align="right"><%= number_with_precision(note.total, precision: 2, delimiter: I18n.locale == :es ? "." : ",") unless note.total.blank? %></td>
      <td> <%= render :partial => '/layouts/crud/edit', :locals => { :model => ReceiptNote, :path => edit_receipt_note_path(note) } %>
      <%= render :partial => '/layouts/crud/delete', :locals => { :model => ReceiptNote, :path => offer, :msg => t("activerecord.models.receipt_note.one"), :txt => note.receipt_no } %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= render :partial => '/layouts/pagination', :locals => { :ivar => @receipt_notes } %>
