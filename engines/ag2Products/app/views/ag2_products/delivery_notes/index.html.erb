<script>
  $(document).ready(function() {
    $('.sel2').select2({
      formatNoMatches: function(m) { return '<%= I18n.t("select2.no_matches") %>'; },
      dropdownCssClass: 'shrinked',
      dropdownAutoWidth: true
    });
  }); 
</script>

<%= render '/layouts/ag2_products/deliveriesbreadcrumb' %>
<h3><%= t '.title' %></h3>

<div class="container-fluid">
  <div class="row-fluid">

    <div class="span3">
      <div class="well sidebar-nav">
        <%= form_tag "offers", :method => 'get' do %>
        <!-- Client -->
        <%= label_tag I18n.t("ag2_products.delivery_notes.index.label_client"), nil, :class => 'form-label' %>
        <%= select_tag "Client", options_from_collection_for_select(@clients, "id", "full_name"), :prompt => "", :class => 'x-large-text-field shrinked sel2' %>
        <!-- Project -->
        <%= label_tag I18n.t("ag2_products.delivery_notes.index.label_project"), nil, :class => 'form-label-under-sel2' %>
        <%= select_tag "Project", options_from_collection_for_select(@projects, "id", "full_name"), :prompt => "", :class => 'x-large-text-field shrinked sel2' %>
        <!-- Work order -->
        <%= label_tag I18n.t("ag2_products.delivery_notes.index.label_work_order"), nil, :class => 'form-label-under-sel2' %>
        <%= select_tag "Order", options_from_collection_for_select(@work_orders, "id", "full_name"), :prompt => "", :class => 'x-large-text-field shrinked sel2' %>
        <!-- Others -->
        <%= label_tag I18n.t("ag2_products.delivery_notes.index.label_others"), nil, :class => 'form-label-under-sel2' %>
        <%= text_field_tag :search, params[:search], :class => 'x-large-text-field shrinked' %>
        <!-- Submit -->
        <%= submit_tag I18n.t("ag2_products.delivery_notes.index.btn_apply"), :class => 'btn btn-primary' %>
        <% end %>
        <!-- Buttons -->
        <%= render :partial => '/layouts/crud/new', :locals => { :model => ReceiptNote, :path => new_delivery_note_path, :txt => t(".btn_new") } %>
        <%= link_to t(".back_to_root"), ag2_products.root_path %>
      </div><!-- /.sidebar-nav -->
    </div><!-- /.span3 -->

    <div class="span9">
      <table class="table table-condensed table-striped shrinked">
        <thead>
          <tr>
            <th><%= t 'activerecord.attributes.delivery_note.delivery_no' %></th>
            <th align="center"><%= t 'activerecord.attributes.delivery_note.delivery_date' %></th>
            <th><%= t 'activerecord.attributes.delivery_note.client' %></th>
            <th><%= t 'activerecord.attributes.delivery_note.project' %></th>
            <th><%= t 'activerecord.attributes.delivery_note.work_order' %></th>
            <th align="right"><%= t 'activerecord.attributes.delivery_note.total' %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_notes.each do |note| %>
          <tr>
            <td><%= link_to note.delivery_no, note %></td>
            <td align="center"><%= note.delivery_date.strftime("%d/%m/%Y") unless note.delivery_date.blank? %></td>
            <td><%= note.client.name unless note.client.blank? %></td>
            <td><%= note.project.full_name unless note.project.blank? %></td>
            <td><%= note.work_order.full_name unless note.work_order.blank? %></td>
            <td align="right"><%= number_with_precision(note.total, precision: 4) unless note.total.blank? %></td>
            <td> <%= render :partial => '/layouts/crud/edit', :locals => { :model => ReceiptNote, :path => edit_delivery_note_path(note) } %>
            <%= render :partial => '/layouts/crud/delete', :locals => { :model => ReceiptNote, :path => offer, :msg => t("activerecord.models.delivery_note.one"), :txt => note.delivery_no } %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= render :partial => '/layouts/pagination', :locals => { :ivar => @delivery_notes } %>
    </div><!-- /.span9 -->
  </div><!-- /.row-fluid -->
</div><!-- /.container-fluid -->
